<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <!-- VIEWS: "Training action line"

      - Model·········: academy.training.action.line
      - _rec_name·····: training_module_id
      - Domain········: []
      - Context·······: {}
      - Parent menu ··: academy_base.menu_academy_catalog
      - View priority·: 16    Sequence····: 10
      - Action help···: There are no action lines yet
  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <!-- Tree view for "academy.training.action.line" -->
  <record id="view_academy_training_action_line_tree" model="ir.ui.view">
    <field name="name">view.academy.training.action.line.tree</field>
    <field name="model">academy.training.action.line</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <list string="academy_training_action_line_tree" create="1" delete="1" edit="1">
        <field name="is_section" column_invisible="1"/>
        <field name="active" column_invisible="1"/>

        <field name="sequence" class="oe_field_sequence" widget="handle"/>
        <field name="code" class="oe_field_code"/>
        <field name="name" class="oe_field_name"/>
        <field name="hours" class="oe_field_hours"/>
        <field name="optional" class="oe_field_optional"/>
        <field name="training_program_id" class="oe_field_training_program_id"/>
        <field name="training_module_id" class="oe_field_training_module_id" optional="hide"/>
        <field name="competency_unit_count" class="oe_field_competency_unit_count" optional="hide"/>
        <field name="description" class="oe_field_description" optional="hide"/>
      </list>
    </field>
  </record>

  <!-- Form view for "academy.training.action.line" -->
  <record id="view_academy_training_action_line_form" model="ir.ui.view">
    <field name="name">view.academy.training.action.line.form</field>
    <field name="model">academy.training.action.line</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <form string="academy_training_action_line_form" create="1" delete="1" edit="1">
        <sheet>
          <div class="oe_button_box" name="button_box"/>

          <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>

          <div class="oe_title">
            <label for="name" class="oe_edit_only"/>
            <h1>
              <field name="name" class="oe_field_name" placeholder="Enter new name"/>
            </h1>
          </div>

          <field name="training_action_id" invisible="1" force_save="1" />
          <field name="is_section" invisible="1" force_save="1" />

          <group col="3" invisible="is_section">
            <group col="2" colspan="2" string="Training">
              <field name="training_program_id" class="oe_field_training_program_id"/>
              <field name="training_module_id" class="oe_field_training_module_id"
                required="not is_section"/>
              <field name="competency_unit_ids" class="oe_field_competency_unit_ids"
                widget="many2many_tags"/>
            </group>
            <group col="2" colspan="1" string="Main settings">
              <field name="code" class="oe_field_code"/>
              <field name="hours" class="oe_field_hours"/>
              <field name="optional" class="oe_field_optional"/>
            </group>
          </group>

          <notebook>
            <page id="setup" string="Setup" class="oe_page_setup" accesskey="S">
              <group col="2" string="Description">
                <field name="description" class="oe_field_description" nolabel="1" colspan="2"/>
              </group>
              <group col="4" string="Ownership" groups="record_ownership.record_ownership_proxy">
                <field name="owner_id" class="oe_field_owner_id"
                  options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"/>
                <field name="subrogate_id" class="oe_field_subrogate_id"
                  options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"/>
              </group>
            </page>
            <page string="Internal Notes" class="oe_page_internal_notes" accesskey="I"
              groups="base.group_user">
              <group col="2">
                <field name="comment" class="oe_field_comment" nolabel="1" colspan="2" widget="html"
                />
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Search view for "academy.training.action.line" -->
  <record id="view_academy_training_action_line_search" model="ir.ui.view">
    <field name="name">view.academy.training.action.line.search</field>
    <field name="model">academy.training.action.line</field>
    <field name="type">search</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <search string="academy_training_action_line_search">
        <field name="name"/>
        <field name="code"/>
        <field name="hours"/>
        <field name="training_program_id"/>
        <field name="training_module_id"/>
        <field name="competency_unit_count"/>

        <separator/>
        <filter string="Optional" name="is_optional" domain="[('optional', '=', True)]" context="{}"
          help=""/>
        <filter string="Required" name="is_not_optional" domain="[('optional', '&lt;&gt;', True)]"
          context="{}" help=""/>

        <separator/>
        <filter string="Group by training program" name="group_by_training_program" domain="[]"
          context="{'group_by': 'training_program_id'}" help=""/>

        <filter string="Group by training module" name="group_by_training_module" domain="[]"
          context="{'group_by': 'training_module_id'}" help=""/>

      </search>
    </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_training_action_line_act_window" model="ir.actions.act_window">
    <field name="type">ir.actions.act_window</field>
    <field name="name">Training action line</field>
    <field name="res_model">academy.training.action.line</field>
    <field name="view_mode">list,form</field>
    <field name="target">current</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="search_view_id" ref="view_academy_training_action_line_search"/>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create"> Click to add new training action line </p>
      <p> There are no training action lines yet </p>
    </field>
  </record>

  <!-- Tree view for "academy.training.action.line" -->
  <record id="view_academy_training_action_line_editable_tree" model="ir.ui.view">
    <field name="name">view.academy.training.action.line.tree</field>
    <field name="model">academy.training.action.line</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <list string="academy_training_action_line_tree" create="1" delete="1" edit="1"
        decoration-bf="is_section" decoration-muted="is_section" class="academy-action-lines">
        <field name="sequence" class="oe_field_sequence" widget="handle"/>
        <field name="code" class="oe_field_code" invisible="is_section"/>
        <field name="name" class="oe_field_name academy-section-title"/>
        <field name="training_module_id" class="oe_field_training_module_id"
          required="not is_section" invisible="is_section" optional="hide"/>
        <field name="hours" class="oe_field_hours" invisible="is_section"/>
        <field name="optional" class="oe_field_optional" invisible="is_section"/>
        <field name="is_section" column_invisible="True"/>
        <control>
          <create string="Add line"/>
          <create string="Add section" context="{'default_is_section': True}"/>
        </control>
      </list>
    </field>
  </record>


</odoo>
