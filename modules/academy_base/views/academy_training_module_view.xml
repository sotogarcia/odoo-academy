<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <!-- VIEWS: "Training Module"

            - Model·········: academy.training.module
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_base.menu_academy_catalog
            - View priority·: 16    Sequence····: 10
            - Action help···: There are no training modules in catalog
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <!-- List view for "academy.training.module" -->
  <record id="view_academy_training_module_tree" model="ir.ui.view">
    <field name="name">view.academy.training.module.tree</field>
    <field name="model">academy.training.module</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="25"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <list string="academy_training_module_tree" create="1" delete="1" edit="1">
        <field name="code"/>
        <field name="name"/>
        <field name="hours" class="oe_field_hours" widget="float_time"/>
        <field name="manager_id" class="oe_field_manager_id"/>
      </list>
    </field>
  </record>


  <!-- Form view for "academy.training.module" -->
  <record id="view_academy_training_module_form" model="ir.ui.view">
    <field name="name">view.academy.training.module.form</field>
    <field name="model">academy.training.module</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="25"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <form string="academy_training_module_form" create="1" delete="1" edit="1">
        <sheet>
          <div class="oe_button_box" name="button_box">
            <button name="view_training_program_lines" type="object" class="oe_stat_button"
              icon="fa-th-list" title="View detailed program">
              <field name="program_line_count" widget="statinfo" string="No. of lines"/>
            </button>
          </div>

          <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>

          <field name="image_1920" widget="image" class="oe_avatar"
            options='{"preview_image": "image_128"}'/>

          <div class="oe_title">
            <field name="active" invisible="1"/>
            <label for="name" class="oe_edit_only"/>
            <h1>
              <field name="name" class="oe_field_name" placeholder="Enter new name"/>
            </h1>
          </div>

          <group col="2">
            <field name="code" class="oe_field_module_code" placeholder="Enter new code"/>
          </group>

          <notebook>
            <page id="setup" string="Setup" class="oe_page_setup" accesskey="S">
              <group col="4" string="Description">
                <field name="description" class="oe_field_description" colspan="2" nolabel="1"/>
              </group>
              <group col="4" string="Ownership" id="ownership" groups="record_ownership.record_ownership_proxy">
                <field name="owner_id" class="oe_field_owner_id"/>
                <field name="subrogate_id" class="oe_field_subrogate_id"/>
              </group>
            </page>
          </notebook>
        </sheet>

        <chatter/>
      </form>
    </field>
  </record>


  <!-- Kanban view for "academy.training.module" -->
  <record id="view_academy_training_module_kanban" model="ir.ui.view">
    <field name="name">view.academy.training.module.kanban</field>
    <field name="model">academy.training.module</field>
    <field name="type">kanban</field>
    <field name="mode">primary</field>
    <field name="priority" eval="25"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <kanban sample="1">
        <field name="display_name"/>
        <field name="image_128"/>
        <field name="training_module_id"/>
        <field name="hours"/>
        <field name="owner_id"/>
        <field name="code"/>

        <templates>
          <t t-name="card" class="flex-row">
            <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>

            <aside class="o_kanban_aside_full">
              <t t-if="record.image_128.raw_value">
                <field name="image_128" class="w-100" widget="image"
                  options="{'img_class': 'w-100 h-auto p-2 align-top'}"/>
              </t>
              <t t-if="!record.image_128.raw_value">
                <img id="training-module-no-image" src="/academy_base/static/src/img/training-module-128.png" class="w-100 h-auto p-2"
                  alt="Training module" title="Training module without image" />
              </t>
            </aside>

            <div class="flex-fill d-flex flex-column justify-content-between overflow-hidden w-100 ps-2 ps-md-0">
              <main class="d-flex flex-column justify-content-start align-items-start">
                <h2 class="h4">
                  <field name="display_name"/>
                </h2>

                <ul class="list-unstyled w-100 small my-0">
                  <li class="d-flex flex-row justify-content-start lh-lg text-truncate" title="Training module code">
                        <span t-if="record.code.raw_value">
                          <t t-esc="record.code.raw_value"/>
                        </span>
                        <span t-if="!record.code.raw_value">---</span>
                  </li>

                  <li class="d-flex flex-row justify-content-start lh-lg text-truncate" title="Teaching hours">
                    <strong class="pe-2">Hours:</strong>
                    <field name="hours" class="oe_field_hours" widget="float_time" />
                  </li>

                </ul>

              </main>

              <!-- footer: begin -->
              <footer class="d-flex justify-content-end align-items-start mt-2">
                <button name="view_training_programs" type="object" class="btn my-0 py-0" string="No. of programs">
                  <i class="fa fa-lg fa-cubes me-2" aria-hidden="true" title="View training programs"></i>
                  <field name="training_program_count" class="oe_field_training_program_count" />
                </button>
              </footer>
              <!-- footer: end -->

            </div>

          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Search view for "academy.training.module" -->
  <record id="view_academy_training_module_search" model="ir.ui.view">
    <field name="name">view.academy.training.module.search</field>
    <field name="model">academy.training.module</field>
    <field name="type">search</field>
    <field name="mode">primary</field>
    <field name="priority" eval="25"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <search string="academy_training_module_search">
        <field name="name"/>
        <field name="code"/>

        <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>

      </search>
    </field>
  </record>


  <!-- MODULES AS MAIN MODULES
             Folowing lines are specific to shown main modules (without units)
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <!-- List view for "academy.training.module" -->
  <record id="view_academy_training_module_module_tree" model="ir.ui.view">
    <field name="name">view.academy.training.module.module.tree</field>
    <field name="model">academy.training.module</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_training_module_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='hours']" position="before">
        <field name="training_unit_count" class="oe_field_training_unit_count" string="Units"/>
      </xpath>
    </field>
  </record>


  <!-- List view for "academy.training.module" -->
  <record id="view_academy_training_module_module_form" model="ir.ui.view">
    <field name="name">view.academy.training.module.module.form</field>
    <field name="model">academy.training.module</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_training_module_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='button_box']" position="inside">
        <button name="view_training_units" type="object" class="oe_stat_button" icon="fa-list-ul">
          <field name="training_unit_count" widget="statinfo" string="No. of units"/>
        </button>
      </xpath>
      <xpath expr="//notebook/page" position="after">
        <page string="Training units" class="oe_page_training_units" accesskey="U">
          <field name="training_unit_ids" class="oe_field_training_unit_ids"
            context="{'form_view_ref':'academy_base.view_academy_training_module_unit_form', 'default_training_module_id': id}"
          />
        </page>
      </xpath>
      <xpath expr="//field[@name='code']" position="after">
        <field name="hours" class="oe_field_ownhours" widget="float_time"
          placeholder="Enter the number of hours for this module" invisible="training_unit_count != 0"/>
        <field name="hours" class="oe_field_hours" widget="float_time"
          placeholder="Total hours from all units in the module" invisible="training_unit_count == 0"
        />
      </xpath>
    </field>
  </record>


  <!-- List view for "academy.training.module" -->
  <record id="view_academy_training_module_module_kanban" model="ir.ui.view">
    <field name="name">view.academy.training.module.module.kanban</field>
    <field name="model">academy.training.module</field>
    <field name="type">kanban</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_training_module_kanban"/>
    <field name="arch" type="xml">
      <xpath expr="//main/ul/li[1]" position="after">
        <li class="d-flex flex-row justify-content-start lh-lg text-truncate" title="Teaching hours">
          <strong class="pe-2">Units:</strong>
          <field name="training_unit_count" class="oe_field_training_unit_count" />
        </li>
      </xpath>
      <xpath expr="//footer/button[1]" position="before">
        <button name="view_training_units" type="object" class="btn my-0 py-0" string="Training units/blocks">
          <i class="fa fa-lg fa-list me-2" aria-hidden="true" title="View training units/blocks"></i>
          <field name="training_unit_count" class="oe_field_training_unit_count" />
        </button>
      </xpath>
    </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_training_module_act_window" model="ir.actions.act_window">
    <field name="type">ir.actions.act_window</field>
    <field name="name">Training modules</field>
    <field name="res_model">academy.training.module</field>
    <field name="view_mode">kanban,list,form</field>
    <field name="path">academy-training-module</field>
    <field name="target">current</field>
    <field name="domain">[('training_module_id', '=', False)]</field>
    <field name="context">{}</field>
    <field name="search_view_id" ref="view_academy_training_module_search"/>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create"> Click to add new training modules </p>
      <p> There are no training modules yet </p>
    </field>
  </record>

  <record id="action_training_module_act_window_kanban" model="ir.actions.act_window.view">
    <field name="sequence" eval="1"/>
    <field name="view_mode">kanban</field>
    <field name="view_id" ref="academy_base.view_academy_training_module_module_kanban"/>
    <field name="act_window_id" ref="action_training_module_act_window"/>
  </record>

  <record id="action_training_module_act_window_form" model="ir.actions.act_window.view">
    <field name="sequence" eval="2"/>
    <field name="view_mode">form</field>
    <field name="view_id" ref="academy_base.view_academy_training_module_module_form"/>
    <field name="act_window_id" ref="action_training_module_act_window"/>
  </record>

  <record id="action_training_module_act_window_tree" model="ir.actions.act_window.view">
    <field name="sequence" eval="3"/>
    <field name="view_mode">list</field>
    <field name="view_id" ref="academy_base.view_academy_training_module_module_tree"/>
    <field name="act_window_id" ref="action_training_module_act_window"/>
  </record>

  <!-- Main menu for model.name -->
  <record id="menu_training_module" model="ir.ui.menu">
    <field name="name">Training modules</field>
    <field name="sequence" eval="20"/>
    <field name="action" ref="action_training_module_act_window"/>
    <field name="parent_id" ref="academy_base.menu_academy_catalog"/>
    <field name="groups_id" eval="[(4, ref('academy_base.academy_group_technical'))]"/>
  </record>



  <!-- MODULES AS UNITS
             Folowing lines are specific to shown submodules (units)
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <!-- List view for "academy.training.module" -->
  <record id="view_academy_training_module_unit_tree" model="ir.ui.view">
    <field name="name">view.academy.training.module.unit.tree</field>
    <field name="model">academy.training.module</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="30"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_training_module_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//list" position="attributes">
        <attribute name="create">0</attribute>
      </xpath>
      <xpath expr="//field[@name='hours']" position="before">
        <field name="training_module_id" class="oe_field_training_module_id"/>
      </xpath>
    </field>
  </record>


  <record id="view_academy_training_module_unit_form" model="ir.ui.view">
    <field name="name">view.academy.training.module.unit.form</field>
    <field name="model">academy.training.module</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="30"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_training_module_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/group/field[1]" position="after">
        <field name="training_module_id" class="oe_field_training_module_id"
          invisible="not training_module_id"/>
      </xpath>
      <xpath expr="//field[@name='code']" position="after">
        <field name="hours" class="oe_field_ownhours" widget="float_time" />
      </xpath>
    </field>
  </record>

  <record id="view_academy_training_module_unit_kanban" model="ir.ui.view">
    <field name="name">view.academy.training.module.unit.kanban</field>
    <field name="model">academy.training.module</field>
    <field name="type">kanban</field>
    <field name="mode">primary</field>
    <field name="priority" eval="30"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_training_module_kanban"/>
    <field name="arch" type="xml">
      <xpath expr="//main/ul/li[1]" position="attributes">
        <attribute name="title">Training unit/block code</attribute>
      </xpath>
      <xpath expr="//img[@id='training-module-no-image']" position="replace">
        <img id="training-unit-no-image" src="/academy_base/static/src/img/training-unit-128.png" class="w-100 h-auto p-2"
          alt="Training module" title="Training unit without image" />
      </xpath>
    </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_training_module_units_act_window" model="ir.actions.act_window">
    <field name="type">ir.actions.act_window</field>
    <field name="name">Training units</field>
    <field name="res_model">academy.training.module</field>
    <field name="view_mode">kanban,list,form</field>
    <field name="path">academy-training-unit</field>
    <field name="target">current</field>
    <field name="domain">[('training_module_id', '!=', False)]</field>
    <field name="context">{}</field>
    <field name="search_view_id" ref="view_academy_training_module_search"/>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create"> Click to add new training units </p>
      <p> There are no training units yet </p>
    </field>
  </record>

  <record id="action_training_module_units_act_window_kanban" model="ir.actions.act_window.view">
    <field name="sequence" eval="1"/>
    <field name="view_mode">kanban</field>
    <field name="view_id" ref="academy_base.view_academy_training_module_unit_kanban"/>
    <field name="act_window_id" ref="academy_base.action_training_module_units_act_window"/>
  </record>

  <record id="action_training_module_units_act_window_form" model="ir.actions.act_window.view">
    <field name="sequence" eval="2"/>
    <field name="view_mode">form</field>
    <field name="view_id" ref="academy_base.view_academy_training_module_unit_form"/>
    <field name="act_window_id" ref="academy_base.action_training_module_units_act_window"/>
  </record>

  <record id="action_training_module_units_act_window_tree" model="ir.actions.act_window.view">
    <field name="sequence" eval="3"/>
    <field name="view_mode">list</field>
    <field name="view_id" ref="academy_base.view_academy_training_module_unit_tree"/>
    <field name="act_window_id" ref="academy_base.action_training_module_units_act_window"/>
  </record>

