<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <!-- VIEWS: "Training program line"

      - Model·········: academy.training.program.line
      - _rec_name·····: training_module_id
      - Domain········: []
      - Context·······: {}
      - Parent menu ··: academy_base.menu_academy_catalog
      - View priority·: 16    Sequence····: 10
      - Action help···: There are no program lines yet
  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <!-- Tree view for "academy.training.program.line" -->
  <record id="view_academy_training_program_line_tree" model="ir.ui.view">
    <field name="name">view.academy.training.program.line.tree</field>
    <field name="model">academy.training.program.line</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16" />
    <field name="active" eval="True" />
    <field name="arch" type="xml">
      <list string="academy_training_program_line_tree" create="1" delete="1" edit="1">
        <field name="active" column_invisible="1" />
        <field name="sequence" class="oe_field_sequence" widget="handle" />
        <field name="code" class="oe_field_code" />
        <field name="name" class="oe_field_name" />
        <field name="hours" class="oe_field_hours" />
        <field name="optional" class="oe_field_optional" />
        <field name="training_program_id" class="oe_field_training_program_id" />
        <field name="training_module_id" class="oe_field_training_module_id" optional="hide" />
        <field name="competency_unit_count" class="oe_field_competency_unit_count" optional="hide" />
        <field name="description" class="oe_field_description" optional="hide" />
      </list>
    </field>
  </record>

  <!-- Form view for "academy.training.program.line" -->
  <record id="view_academy_training_program_line_form" model="ir.ui.view">
      <field name="name">view.academy.training.program.line.form</field>
      <field name="model">academy.training.program.line</field>
      <field name="type">form</field>
      <field name="mode">primary</field>
      <field name="priority" eval="16" />
      <field name="active" eval="True" />
      <field name="arch" type="xml">
          <form string="academy_training_program_line_form" create="1" delete="1" edit="1">
              <sheet>
                    <div class="oe_button_box" name="button_box"/>

                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                        invisible="active == True"/>

                  <div class="oe_title">
                      <label for="name" class="oe_edit_only" />
                      <h1>
                          <field name="name" class="oe_field_name" placeholder="Enter new name" />
                      </h1>
                  </div>

                  <group col="3">
                    <group col="2" colspan="2" string="Training">
                      <field name="training_program_id" class="oe_field_training_program_id" />
                      <field name="training_module_id" class="oe_field_training_module_id" />
                      <field name="competency_unit_ids" class="oe_field_competency_unit_ids" widget="many2many_tags" />
                    </group>
                    <group col="2" colspan="1" string="Main settings">
                      <field name="code" class="oe_field_code" />
                      <field name="hours" class="oe_field_hours" />
                      <field name="optional" class="oe_field_optional" />
                    </group>
                  </group>

                  <group col="2" string="Description">
                    <field name="description" class="oe_field_description" nolabel="1" colspan="2" />
                  </group>
              </sheet>
          </form>
      </field>
  </record>

  <!-- Search view for "academy.training.program.line" -->
  <record id="view_academy_training_program_line_search" model="ir.ui.view">
      <field name="name">view.academy.training.program.line.search</field>
      <field name="model">academy.training.program.line</field>
      <field name="type">search</field>
      <field name="mode">primary</field>
      <field name="priority" eval="16" />
      <field name="active" eval="True" />
      <field name="arch" type="xml">
          <search string="academy_training_program_line_search">
            <field name="name" />
            <field name="code" />
            <field name="hours" />
            <field name="training_program_id" />
            <field name="training_module_id" />
            <field name="competency_unit_count" />

            <separator />
            <filter string="Optional"
                name="is_optional"
                domain="[('optional', '=', True)]"
                context="{}"
                help="" />
            <filter string="Required"
                name="is_not_optional"
                domain="[('optional', '&lt;&gt;', True)]"
                context="{}"
                help="" />

            <separator />
            <filter string="Group by training program"
                name="group_by_training_program"
                domain="[]"
                context="{'group_by': 'training_program_id'}"
                help="" />

            <filter string="Group by training module"
                name="group_by_training_module"
                domain="[]"
                context="{'group_by': 'training_module_id'}"
                help="" />

          </search>
      </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_training_program_line_act_window" model="ir.actions.act_window">
      <field name="type">ir.actions.act_window</field>
      <field name="name">Training program line</field>
      <field name="res_model">academy.training.program.line</field>
      <field name="view_mode">list,form</field>
      <field name="target">current</field>
      <field name="domain">[]</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_academy_training_program_line_search" />
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
              Click to add new training program line
          </p><p>
              There are no training program lines yet
          </p>
      </field>
  </record>

  <!-- Main menu for model.name -->
  <record id="menu_training_program_line" model="ir.ui.menu" >
      <field name="name">Training program line</field>
      <field name="sequence" eval="25" />
      <field name="action" ref="action_training_program_line_act_window" />
      <field name="parent_id" ref="academy_base.menu_academy_catalog" />
  </record>

</odoo>
