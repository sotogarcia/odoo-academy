  <!-- List view for "academy.teacher" -->
  <record id="view_academy_teacher_tree" model="ir.ui.view">
    <field name="name">view.academy.teacher.tree</field>
    <field name="model">academy.teacher</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_support_staff_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//list" position="attributes">
        <attribute name="string">academy_teacher_tree</attribute>
      </xpath>
    </field>
  </record>

  <!-- Form view for "academy.teacher" -->
  <record id="view_academy_teacher_form" model="ir.ui.view">
    <field name="name">view.academy.teacher.form</field>
    <field name="model">academy.teacher</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_support_staff_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form" position="attributes">
        <attribute name="string">academy_teacher_form</attribute>
      </xpath>
    </field>
  </record>

  <record id="view_academy_teacher_kanban" model="ir.ui.view">
    <field name="name">view.academy.teacher.kanban</field>
    <field name="model">academy.teacher</field>
    <field name="type">kanban</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_support_staff_kanban"/>
    <field name="arch" type="xml">
      <xpath expr="//kanban" position="attributes">
        <attribute name="string">academy_teacher_kanban</attribute>
      </xpath>
      <xpath expr="//img[@id='default-avatar']" position="attributes">
          <attribute name="src">/academy_base/static/src/img/teacher-128.png</attribute>
      </xpath>
    </field>
  </record>

  <!-- Search view for "academy.teacher" -->
  <record id="view_academy_teacher_search" model="ir.ui.view">
    <field name="name">view.academy.teacher.search</field>
    <field name="model">academy.teacher</field>
    <field name="type">search</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="academy_base.view_academy_support_staff_search"/>
    <field name="arch" type="xml">
      <xpath expr="//search" position="attributes">
        <attribute name="string">academy_teacher_search</attribute>
      </xpath>
    </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_teacher_act_window" model="ir.actions.act_window">
    <field name="type">ir.actions.act_window</field>
    <field name="name">Teachers</field>
    <field name="res_model">academy.teacher</field>
    <field name="view_mode">kanban,list,form,activity</field>
    <field name="path">academy-teacher</field>
    <field name="target">current</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="search_view_id" ref="view_academy_teacher_search"/>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create"> Click to add new teachers </p>
      <p> There are no teachers yet </p>
    </field>
  </record>

  <!-- Main menu for model.name -->
  <record id="menu_teacher" model="ir.ui.menu">
    <field name="name">Teachers</field>
    <field name="sequence" eval="20"/>
    <field name="action" ref="action_teacher_act_window"/>
    <field name="parent_id" ref="academy_base.menu_academy_community"/>
    <field name="groups_id" eval="[(4, ref('academy_base.academy_group_technical'))]"/>
  </record>

</odoo>
