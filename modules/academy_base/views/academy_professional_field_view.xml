<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

    <!-- VIEWS: "Professional Field"

            - Model·········: academy.professional.field
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_base.menu_academy_settings_helper
            - View priority·: 16    Sequence····: 10
            - Action help···: There are not professional fields in catalog
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- List view for "academy.professional.field" -->
    <record id="view_academy_professional_field_tree" model="ir.ui.view">
        <field name="name">view.academy.professional.field.tree</field>
        <field name="model">academy.professional.field</field>
        <field name="type">list</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16"/>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <list string="academy_professional_field_tree" create="1" delete="1" edit="1">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form view for "academy.professional.field" -->
    <record id="view_academy_professional_field_form" model="ir.ui.view">
        <field name="name">view.academy.professional.field.form</field>
        <field name="model">academy.professional.field</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16"/>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form string="academy_professional_field_form" create="1" delete="1" edit="1">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                        invisible="active == True"/>

                    <field name="image_1920" widget="image" class="oe_avatar"
                        options='{"preview_image": "image_128"}'/>

                    <div class="oe_title">
                        <field name="active" invisible="1"/>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_field_name" placeholder="Enter new name"/>
                        </h1>
                    </div>
                    <group col="2">
                        <field name="description" class="oe_field_description"
                            placeholder="Enter new description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for "academy.professional.field" -->
    <record id="view_academy_professional_field_search" model="ir.ui.view">
        <field name="name">view.academy.professional.field.search</field>
        <field name="model">academy.professional.field</field>
        <field name="type">search</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16"/>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <search string="academy_professional_field_search">

                <field name="name"/>

                <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>

            </search>
        </field>
    </record>

    <!-- Main window action for model.name -->
    <record id="action_professional_field_act_window" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Professional fields</field>
        <field name="res_model">academy.professional.field</field>
        <field name="view_mode">list,form</field>

        <field name="target">current</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_academy_professional_field_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"> Click to add new professional fields </p>
            <p> There are no professional fields yet </p>
        </field>
    </record>

</odoo>
