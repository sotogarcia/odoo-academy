<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <!-- VIEWS: "Maintenance tasks"

      - Model·········: academy.maintenance.task
      - _rec_name·····: id
      - Domain········: []
      - Context·······: {}
      - Parent menu ··: base.menu_custom
      - View priority·: 16    Sequence····: 10
      - Action help···: There are not maintenance tasks
  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <!-- Tree view for "academy.maintenance.task" -->
  <record id="view_academy_maintenance_tasklist" model="ir.ui.view">
    <field name="name">view.academy.maintenance.task.list</field>
    <field name="model">academy.maintenance.task</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16" />
    <field name="active" eval="True" />
    <field name="arch" type="xml">
      <list string="academy_maintenance_tasklist" create="0" delete="0" edit="1" editable="bottom">
      <field name="sequence" class="oe_field_sequence" widget="handle" />
      <field name="display_name" class="oe_field_display_name" />
      <field name="model_id" class="oe_field_model_id"
        options="{'no_quick_create': True, 'no_create': True, 'no_open': False}" />
      <field name="method" class="oe_field_method" />
      <field name="frequency" class="oe_field_frequency" />
      <field name="offset" class="oe_field_offset" />
      <field name="active" class="oe_field_active" widget="boolean_toggle" />
      </list>
    </field>
  </record>

  <!-- Search view for "academy.maintenance.task" -->
  <record id="view_academy_maintenance_task_search" model="ir.ui.view">
      <field name="name">view.academy.maintenance.task.search</field>
      <field name="model">academy.maintenance.task</field>
      <field name="type">search</field>
      <field name="mode">primary</field>
      <field name="priority" eval="16" />
      <field name="active" eval="True" />
      <field name="arch" type="xml">
          <search string="academy_maintenance_task_search">
            <field name="model_id" />
            <field name="method" />
            <field name="frequency" />
            <field name="offset" />
            <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>
          </search>
      </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_maintenance_tasks_act_window" model="ir.actions.act_window">
      <field name="type">ir.actions.act_window</field>
      <field name="name">Maintenance tasks</field>
      <field name="res_model">academy.maintenance.task</field>
      <field name="view_mode">list</field>
      <field name="target">current</field>
      <field name="domain">[]</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_academy_maintenance_task_search" />
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
              Click to add new maintenance tasks
          </p><p>
              There are not maintenance tasks
          </p>
      </field>
  </record>

</odoo>
