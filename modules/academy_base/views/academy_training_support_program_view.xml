<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <!-- VIEWS: "Academy training support program"

            - Model·········: academy.training.program
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_base.menu_academy_catalog
            - View priority·: 16    Sequence····: 10
            - Action help···: There are no training support programs in catalog
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <!-- List view for "academy.training.support.program" -->
  <record id="view_academy_training_support_program_tree" model="ir.ui.view">
    <field name="name">view.academy.training.support.program.tree</field>
    <field name="model">academy.training.program</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="view_academy_training_program_tree" />
    <field name="arch" type="xml">
      <xpath expr="//list" position="attributes">
        <attribute name="string">academy_training_support_program_tree</attribute>
        <xpath expr="//field[@name='program_line_count']" position="replace" />
      </xpath>
    </field>
  </record>

  <!-- Form view for "academy.training.support.program" -->
  <record id="view_academy_training_support_program_form" model="ir.ui.view">
    <field name="name">view.academy.training.support.program.form</field>
    <field name="model">academy.training.program</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="view_academy_training_program_form" />
    <field name="arch" type="xml">
      <xpath expr="//form" position="attributes">
        <attribute name="string">academy_training_support_program_tree</attribute>
      </xpath>

      <xpath expr="//button[@name='view_training_program_lines']" position="replace" />
      <xpath expr="//page[@id='program-lines']" position="replace" />
      <xpath expr="//group[@id='classification']" position="replace" />
      <xpath expr="//group[@id='attainment']" position="replace" />

      <xpath expr="//page[@id='details']" position="inside">
        <group col="2">
            <field name="hours" class="oe_field_hours" />
        </group>
      </xpath>

    </field>
  </record>

  <record id="view_academy_training_support_program_kanban" model="ir.ui.view">
    <field name="name">view.academy.training.support.program.kanban</field>
    <field name="model">academy.training.program</field>
    <field name="type">kanban</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="view_academy_training_program_kanban" />
    <field name="arch" type="xml">
      <xpath expr="//kanban" position="attributes">
        <attribute name="string">academy_training_support_program_tree</attribute>
      </xpath>
      <xpath expr="//button[@name='view_training_program_lines']" position="replace" />
      <xpath expr="//img[@id='alternative-image']" position="attributes">
        <attribute name="src">/academy_base/static/src/img/training-support-program-128.png</attribute>
      </xpath>
    </field>
  </record>

  <!-- Search view for "academy.training.support.program" -->
  <record id="view_academy_training_support_program_search" model="ir.ui.view">
    <field name="name">view.academy.training.support.program.search</field>
    <field name="model">academy.training.program</field>
    <field name="type">search</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="view_academy_training_program_search" />
    <field name="arch" type="xml">
      <xpath expr="//search" position="attributes">
        <attribute name="string">academy_training_support_program_tree</attribute>
      </xpath>
    </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_academy_training_support_program_act_window" model="ir.actions.act_window">
    <field name="type">ir.actions.act_window</field>
    <field name="name">Training Support Programs</field>
    <field name="res_model">academy.training.program</field>
    <field name="view_mode">kanban,list,form,activity</field>
    <field name="path">academy-support-program</field>
    <field name="target">current</field>
    <field name="domain">[('program_type', '=', 'support')]</field>
    <field name="context">{'default_program_type': 'support'}</field>
    <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'kanban', 'view_id': ref('academy_base.view_academy_training_support_program_kanban')}),
        (0, 0, {'view_mode': 'list', 'view_id': ref('academy_base.view_academy_training_support_program_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('academy_base.view_academy_training_support_program_form')})]"/>
    <field name="search_view_id" ref="view_academy_training_support_program_search"/>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create"> Click to add new training support program</p>
      <p> There are no training support programs in catalog </p>
    </field>
  </record>



  <!-- Main menu for model.name -->
  <record id="menu_academy_training_support_program" model="ir.ui.menu">
    <field name="name">Support Programs</field>
    <field name="sequence" eval="15"/>
    <field name="action" ref="action_academy_training_support_program_act_window"/>
    <field name="parent_id" ref="academy_base.menu_academy_catalog"/>
    <field name="groups_id" eval="[(4, ref('academy_base.academy_group_teacher'))]"/>
  </record>

