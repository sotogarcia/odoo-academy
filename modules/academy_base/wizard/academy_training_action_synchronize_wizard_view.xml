<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <record id="view_academy_training_action_synchronize_wizard" model="ir.ui.view">
    <field name="name">Synchronize groups</field>
    <field name="model">academy.training.action.synchronize.wizard</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16" />
    <field name="active" eval="True" />
    <field name="arch" type="xml">
      <form string="Synchronize groups" create="1" delete="1" edit="1">

        <field name="parent_action_ids" class="oe_field_parent_action_ids" invisible="1" />
          <field name="child_action_ids" class="oe_field_child_action_ids" invisible="1" />

        <group col="2">

          <group col="2" string="Restrictions">
            <field name="parent_action_count" class="oe_field_parent_action_count" />
            <field name="child_action_count" class="oe_field_child_action_count" />
            <field name="changes_only" class="oe_field_changes_only" />
          </group>

          <group col="2" string="Options">
            <field name="sync_details" class="oe_field_sync_details" />
            <field name="remove_mismatches" class="oe_field_remove_mismatches" />
            <field name="optional" class="oe_field_optional" />
          </group>

        </group>

        <div class="alert alert-info" role="alert">
          <h5>Restriction rules</h5>
          <dl class="dl-grid-two-cols">
            <dt>Actions &amp; Groups</dt>
            <dd>Intersection of groups from the selected actions and the
                chosen groups.</dd>

            <dt>Only programs</dt>
            <dd>All groups from the selected actions.</dd>

            <dt>Only actions</dt>
            <dd>Exactly the chosen groups.</dd>

            <dt>Neither</dt>
            <dd>No groups will be selected.</dd>
          </dl>
        </div>

        <footer>
          <button name="perform_action"
                    string="Synchronize"
                    class="btn-primary"
                    type="object"
                    default_focus="0"
                    icon="fa-refresh"
                    confirm="Proceed with synchronization?" />
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>

      </form>
    </field>
  </record>

  <record id="action_academy_training_action_synchronize_wizard_act_window" model="ir.actions.act_window">
      <field name="type">ir.actions.act_window</field>
      <field name="name">Synchronize from parent</field>
      <field name="res_model">academy.training.action.synchronize.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="domain">[]</field>
      <field name="context">{}</field>
  </record>

</odoo>
