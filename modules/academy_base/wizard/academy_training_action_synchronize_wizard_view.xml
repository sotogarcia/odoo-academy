<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <record id="view_academy_training_action_synchronize_wizard_wizard" model="ir.ui.view">
      <field name="name">Synchronize program</field>
      <field name="model">academy.training.action.synchronize.wizard</field>
      <field name="type">form</field>
      <field name="mode">primary</field>
      <field name="priority" eval="16" />
      <field name="active" eval="True" />
      <field name="arch" type="xml">
          <form string="Facility reporting wizard" create="1" delete="1" edit="1">

              <field name="training_action_ids" invisible="1" />

              <group col="2" class="mt-3">
                <group col="2" string="Append">
                  <field name="create_new" class="oe_field_create_new" />
                  <field name="include_optional" class="oe_field_include_optional" />
                </group>
                <group col="2" string="Existing">
                  <field name="update_existing" class="oe_field_update_existing" />
                  <field name="remove_obsolete" class="oe_field_remove_obsolete" />
                </group>
              </group>

              <footer>
                <button name="perform_action"
                        string="Change"
                        type="object"
                        class="btn-primary">
                  <attribute name="confirm">Are you sure you want to apply the changes?</attribute>
                  <attribute name="help">Apply changes</attribute>
                </button>
              </footer>

          </form>
      </field>
  </record>

  <record id="action_academy_training_action_synchronize_wizard_wizard_act_window" model="ir.actions.act_window">
      <field name="type">ir.actions.act_window</field>
      <field name="name">Synchronize program</field>
      <field name="res_model">academy.training.action.synchronize.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="domain">[]</field>
      <field name="context">{}</field>
      <field name="binding_model_id" ref="academy_base.model_academy_training_action"/>
      <field name="binding_type">action</field>
      <field name="binding_view_types">list,form</field>
  </record>

</odoo>
