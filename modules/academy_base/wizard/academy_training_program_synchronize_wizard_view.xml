<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <record id="view_academy_training_program_synchronize_wizard" model="ir.ui.view">
    <field name="name">Synchronize program</field>
    <field name="model">academy.training.program.synchronize.wizard</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16" />
    <field name="active" eval="True" />
    <field name="arch" type="xml">
      <form string="Synchronize program" create="1" delete="1" edit="1">

        <field name="source_program_ids" class="oe_field_source_program_ids" invisible="1" />
          <field name="target_action_ids" class="oe_field_target_action_ids" invisible="1" />

        <group col="2">

          <group col="2" string="Restrictions">
            <field name="source_program_count" class="oe_field_source_program_count" />
            <field name="target_action_count" class="oe_field_target_action_count" />
          </group>

          <group col="2" string="Options">
            <field name="synchronize_groups" class="oe_field_synchronize_groups" />
            <field name="remove_mismatches" class="oe_field_remove_mismatches" />
            <field name="optional" class="oe_field_optional" />
          </group>

        </group>

        <div class="alert alert-info" role="alert">
          <h5>Restriction rules</h5>
          <dl class="dl-grid-two-cols">
            <dt>Programs &amp; Actions</dt>
            <dd>Intersection of actions from the selected programs and the
                chosen actions.</dd>

            <dt>Only programs</dt>
            <dd>All actions from the selected programs.</dd>

            <dt>Only actions</dt>
            <dd>Exactly the chosen actions.</dd>

            <dt>Neither</dt>
            <dd>No actions will be selected.</dd>
          </dl>
        </div>

        <footer>
          <button name="perform_action"
                    string="Synchronize"
                    class="btn-primary"
                    type="object"
                    default_focus="0"
                    icon="fa-refresh"
                    confirm="Proceed with synchronization?" />
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>

      </form>
    </field>
  </record>

  <record id="action_academy_training_program_synchronize_wizard_act_window" model="ir.actions.act_window">
      <field name="type">ir.actions.act_window</field>
      <field name="name">Synchronize from programs</field>
      <field name="res_model">academy.training.program.synchronize.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="domain">[]</field>
      <field name="context">{}</field>
  </record>

</odoo>
