<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="view_academy_tests_test_question_shuffle_wizard" model="ir.ui.view">
            <field name="name">Shuffle wizard</field>
            <field name="model">academy.tests.test.question.shuffle.wizard</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Facility reporting wizard" create="1" delete="1" edit="1">
                    <field name="available_block_ids" invisible="1" />
                    <field name="question_rel_ids" invisible="1" />

                    <header>
                        <button name="perform_action"
                                class="btn btn-primary"
                                string="Sort"
                                type="object"
                                default_focus="0"
                                icon="fa-play"
                                help="Sort questions" />
                    </header>

                    <group col="4">
                        <field name="test_id" class="oe_field_test_id" />
                        <field name="question_rel_count" class="oe_field_question_rel_count" string="Questions" />
                        <field name="shuffle_scope" class="oe_field_shuffle_scope"
                            attrs="{'readonly': [('available_block_ids', '=', [])]}" />
                        <field name="random_order" class="oe_field_random_order" />
                    </group>

                    <group col="4" string="Blocks" attrs="{'invisible': [('shuffle_scope', '=', 'questions')]}">
                        <field name="block_position_ids" class="oe_field_block_position_ids" colspan="4" nolabel="1"
                            attrs="{'invisible': [('random_order', '=', True)]}" />
                        <field name="unassigned_question_handling" class="oe_field_unassigned_question_handling" string="Unassigned" />
                        <field name="assign_to_block_id" class="oe_field_assign_to_block_id"
                            options="{'no_quick_create': True, 'no_create': True, 'no_open': True}"
                            attrs="{'required': [('unassigned_question_handling', '=', 'assign')], 'readonly': [('unassigned_question_handling', '&lt;&gt;', 'assign')]}"
                            domain="[('id', 'in', available_block_ids)]" />
                    </group>

                    <footer />

                </form>
            </field>
        </record>

        <record id="action_academy_tests_test_question_shuffle_wizard_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Shuffle wizard</field>
            <field name="res_model">academy.tests.test.question.shuffle.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

    </data>
</openerp>
