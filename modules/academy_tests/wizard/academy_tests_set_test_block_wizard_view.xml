<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="view_academy_tests_set_test_block_wizard_wizard" model="ir.ui.view">
            <field name="name">Set test blcok</field>
            <field name="model">academy.tests.set.test.block.wizard</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Facility reporting wizard" create="1" delete="1" edit="1">
                    <field name="question_rel_ids" invisible="1" />
                    
                    <header>
                        <button name="perform_action"
                            class="btn btn-primary"
                            string="Set block"
                            type="object"
                            default_focus="0"
                            icon="fa-play"
                            help="Set test block to the chosen questions"/>
                    </header>
        
                    <group col="2">
                        <field name="assign_to_block_id" class="oe_field_assign_to_block_id" />
                        <field name="sort_after" class="oe_field_sort_after" />
                    </group>
        
                    <footer />
        
                </form>
            </field>
        </record>
        
        <record id="action_academy_tests_set_test_block_wizard_wizard_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Set test blcok</field>
            <field name="res_model">academy.tests.set.test.block.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="binding_model_id" ref="academy_tests.model_academy_tests_test_question_rel" />
            <field name="binding_view_types">list,form</field>
            <field name="groups_id" eval="[(4, ref('academy_base.academy_group_teacher'))]"/>
        </record>
        
    </data>
</openerp>
