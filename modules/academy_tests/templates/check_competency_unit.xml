<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="mail_template_check_competency_unit" model="mail.template">
            <field name="name">Check competency unit</field>
            <field name="model_id" ref="academy_tests.model_academy_competency_unit"/>
            <field name="subject">IMPORTANT: Check competency unit</field>
            <field name="email_from">"${(object.owner_id.company_id.name) | safe}" &lt;${(object.owner_id.company_id.email) | safe}&gt;</field>
            <field name="partner_to">${object.owner_id.partner_id.id if object.owner_id.partner_id.email and object.owner_id.partner_id.email == object.owner_id.email else False}</field>
            <field name="reply_to">"${user.name or (object.owner_id.company_id.name) | safe}" &lt;${user.email or (object.owner_id.company_id.email) | safe}&gt;</field>
            <field name="lang">${object.owner_id.partner_id.lang}</field>
<field name="body_html" type="html">
<table border="0" cellpadding="0" cellspacing="0" style="background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td align="center">
<table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
<tbody>
    <!-- CONTENT -->
    <tr>
        <td align="center" style="min-width: 590px;">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                <td style="text-align : left">
                    <span style="font-size: 20px; font-weight: bold;">
                        Check competency unit
                    </span><br/><br/>
                </td>
                <tr><td valign="top" style="font-size: 13px;">
                    <div>
                        <p style="margin: 1.5em 0px!important; line-height: 1.25em;">
                            Dear ${object.owner_id.name or ''},
                        </p>

                        <p style="text-justify; margin: 0.5em 0; line-height: 1.25em;">
                            It is necessary that you verify and complete both the test topics
                            and categories associated with the competency unit
                            «<i style="font-weight: bold;">${object.competency_name}</i>»
                            of the training activity
                            «<i style="font-weight: bold;">${object.training_activity_id.name}</i>».
                        </p>

                        <table style="margin: 0.5em 0; border:1px solid black; width: 100%; border-collapse: collapse; table-layout: fixed;">
                            <thead>
                                <tr>
                                    <th style="text-transform:uppercase; background-color: #CCCCCC; min-height: 1.5em;vertical-align: top;border: 1px solid black; width: 39%; padding: 3px 6px;font-weight: bold;">Topic</th>
                                    <th style="text-transform:uppercase; background-color: #CCCCCC; min-height: 1.5em;vertical-align: top;border: 1px solid black; width: 61%; padding: 3px 6px;font-weight: bold;">Category</th>
                                </tr>
                            </thead>
                            <tr>
                                <td style="min-height: 1.5em;vertical-align: top;border-right: 1px solid black; padding: 3px 6px;">&#160;</td>
                                <td style="min-height: 1.5em;vertical-align: top;border-left: 1px solid black; padding: 3px 6px;">&#160;</td>
                            </tr>
                            <tr>
                                <td style="min-height: 1.5em;vertical-align: top;border-right: 1px solid black; padding: 3px 6px;">&#160;</td>
                                <td style="min-height: 1.5em;vertical-align: top;border-left: 1px solid black; padding: 3px 6px;">&#160;</td>
                            </tr>
                            <tr>
                                <td style="min-height: 1.5em;vertical-align: top;border-right: 1px solid black; padding: 3px 6px;">&#160;</td>
                                <td style="min-height: 1.5em;vertical-align: top;border-left: 1px solid black; padding: 3px 6px;">&#160;</td>
                            </tr>
                            <tr>
                                <td style="min-height: 1.5em;vertical-align: top;border-right: 1px solid black; padding: 3px 6px;">&#160;</td>
                                <td style="min-height: 1.5em;vertical-align: top;border-left: 1px solid black; padding: 3px 6px;">&#160;</td>
                            </tr>
                            <tr>
                                <td style="min-height: 1.5em;vertical-align: top;border-right: 1px solid black; padding: 3px 6px;">&#160;</td>
                                <td style="min-height: 1.5em;vertical-align: top;border-left: 1px solid black; padding: 3px 6px;">&#160;</td>
                            </tr>
                        </table>

                        <p style="text-justify; margin: 0.5em 0; line-height: 1.25em;">
                            You can respond to this email by completing the table provided within
                            the cited text.
                        </p>

                        <p style="margin: 1.5em 0px!important; line-height: 1.25em;">
                            Thank you in advance!
                        </p>
                        <br>-·-</br>
                        <p style="margin: 0.5em 0; line-height: 1.25em;">
                            The ${object.owner_id.company_id.name} Team
                        </p>
                    </div>
                </td></tr>
                <tr><td style="text-align:center;">
                  <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                </td></tr>
            </table>
        </td>
    </tr>
</tbody>
</table>
</td></tr>
</table>
            </field>
            <field name="lang">${object.owner_id.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="False"/>
        </record>

    </data>
</openerp>