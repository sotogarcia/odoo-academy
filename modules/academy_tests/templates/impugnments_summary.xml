<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="mail_template_impugnments_summary" model="mail.template">
            <field name="name">Impugnments Summary</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">ODOO REPORT: Summary of Open Impugnments</field>
            <field name="email_from">"${(object.company_id.name or user.company_id.name) | safe}" &lt;${(object.company_id.email or user.company_id.email or user.email) | safe}&gt;</field>
            <field name="partner_to">${object.id}</field>
            <field name="reply_to">${object.company_id.email}</field>
            <field name="lang">${object.lang}</field>
            <field name="body_html" type="html">

<table border="0" cellpadding="0" cellspacing="0" style="padding-top:16px;background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
  <tbody>
    <tr>
      <td align="center">
        <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding:16px;background-color: white; color: #454748; border-collapse:separate;">
          <tbody>
            <!-- HEADER -->
            <tr>
              <td align="center" style="min-width:590px;">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                  <tbody>
                    <tr>
                      <td valign="middle">
                        <span style="font-size:10px;">Summary of unanswered impugnments</span>
                        <br />
                        <span style="font-size:20px;font-weight: bold;"></span>
                      </td>
                      <td valign="middle" align="right">
                        <img src="/logo.png?company=" style="padding:0px;margin: 0px; height: auto; width: 80px;" />
                      </td>
                    </tr>
                    <tr>
                      <td colspan="2" style="text-align:center;">
                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" />
                      </td>
                    </tr>
                  </tbody>
                </table>
              </td>
            </tr>
            <!-- CONTENT -->
            <tr>
              <td align="center" style="min-width:590px;">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                  <tbody>
                    <tr>
                      <td valign="top" style="font-size:13px;text-align: justify;">
                        <p style="padding:24px 0px;">To the attention of ${object.name or 'User'}.</p>
                        <p>The table below shows the number of pending impugnments that have not yet been answered, grouped by responsible person.</p>
                        <br /> 
                        ${ctx.get('table_html') | safe} 
                        <br />
                        <p style="padding:24px 0px;">Please ensure these are reviewed and responded to in a timely manner.</p>
                        <p>Best regards, <br />${object.company_id.name} Team </p>
                      </td>
                    </tr>
                    <tr>
                      <td style="text-align:center;">
                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" />
                      </td>
                    </tr>
                  </tbody>
                </table>
              </td>
            </tr>
            <!-- FOOTER -->
            <tr>
              <td align="center" style="min-width:590px;">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                  <tbody>
                    <tr>
                      <td valign="middle" align="left"></td>
                    </tr>
                    <tr>
                      <td valign="middle" align="left" style="opacity:0.7;">
                        ${user.company_id.phone}
                        % if user.company_id.email:
                          | <a href="mailto:${user.company_id.email}" style="color:#454748;">
                              ${user.company_id.email}
                            </a>
                        % endif
                        % if user.company_id.website:
                          | <a href="${user.company_id.website}" style="color:#454748;">
                              ${user.company_id.website}
                            </a>
                        % endif
                      </td>
                    </tr>
                  </tbody>
                </table>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>

            </field>
            <field name="auto_delete" eval="False"/>
            <field name="user_signature" eval="False"/>
        </record>

    </data>
</openerp>
