<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

    <template id="impugnments_summary_table">
      <t t-name="academy_tests.impugnments_summary_table">
        <t t-set="lines" t-value="ctx.get('lines', [])"/>
        <t t-if="lines">
          <table border="1" cellpadding="6" cellspacing="0" width="100%" style="font-size:10px; border-collapse: collapse; width: 100%;">
            <thead style="background-color:#eeeeee;">
              <tr>
                <th align="left" style="text-align: left;">Responsible</th>
                <th align="center" style="width: 60px; text-align: center;">Pending</th>
                <th align="center" style="width: 80px; text-align: center;">Oldest</th>
                <th align="center" style="width: 80px; text-align: center;">Newest</th>
                <th align="center" style="width: 80px; text-align: center;">Last login</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="lines" t-as="line">
              <tr>
                <td align="left" style="text-align: left;"><t t-esc="line['name']"/></td>
                <td align="center" style="text-align: center;"><t t-esc="line['count']"/></td>
                <td align="center" style="text-align: center;"><t t-esc="line['oldest']"/></td>
                <td align="center" style="text-align: center;"><t t-esc="line['newest']"/></td>
                <td align="center" style="text-align: center;"><t t-esc="line['last_login']"/></td>
              </tr>
              </t>
            </tbody>
          </table>
        </t>
        <t t-if="not lines">
          <p><em>There are no open impugnments at this time.</em></p>
        </t>
      </t>
    </template>

    </data>
</openerp>
