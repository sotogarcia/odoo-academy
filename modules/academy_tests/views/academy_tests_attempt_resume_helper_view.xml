<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- VIEWS: "Attempt statistics"

            - Model·········: academy.tests.attempt.resume.helper
            - _rec_name·····: id
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_base.menu_academy_monitoring
            - View priority·: 16    Sequence····: 10
            - Action help···: There is no any test attempt yet
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <!-- Tree view for "academy.tests.attempt.resume.helper" -->
        <record id="view_academy_tests_attempt_resume_helper_tree" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.resume.helper.tree</field>
            <field name="model">academy.tests.attempt.resume.helper</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="view_academy_tests_attempt_resume_helper_tree" create="0" delete="0" edit="0"
                    decoration-success="passed" decoration-warning="not passed">
                    <field name="attempt_id" invisible="1" />
                    <field name="available" widget="float_time" invisible="1" />
                    <field name="passed" invisible="1" />

                    <field name="student_id" class="oe_field_student_id" />
                    <field name="test_id" class="oe_field_test_id" />
                    <field name="start" class="oe_field_start" />
                    <field name="elapsed" class="oe_field_elapsed" widget="float_time"  />
                    <field name="question_count" class="oe_field_questions" />
                    <field name="answered_count" class="oe_field_answered" />
                    <field name="final_points" class="oe_field_final_points" />
                </tree>
            </field>
        </record>

        <!-- Form view for "academy.tests.attempt.resume.helper" -->
        <record id="view_academy_tests_attempt_resume_helper_form" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.resume.helper.form</field>
            <field name="model">academy.tests.attempt.resume.helper</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="view_academy_tests_attempt_resume_helper_form" create="0" delete="0" edit="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                            <button name="show_attempt"
                                    string="Edit"
                                    type="object"
                                    default_focus="0"
                                    icon="fa-pencil-square-o"
                                    help="Edit the details of the attempt" />
                            <button name="close" type="object"
                                class="oe_stat_button oe_read_only" icon="fa-close"
                                attrs="{'invisible': [('closed', '=', True)]}">
                                <span>Close</span>
                            </button>
                        </div>

                        <div class="oe_title w-100">
                            <field name="active" invisible="1"/>
                            <field name="closed" invisible="1" />
                            <field name="id" invisible="1" />
                            <label for="display_name" class="oe_edit_only" />
                            <h1>
                               <field name="display_name" class="oe_field_display_name"
                                    attrs="{'invisible': [('id', '=', False)]}"/>
                                <span attrs="{'invisible': [('id', '!=', False)]}">New attempt</span>
                            </h1>
                        </div>

                        <group col="2" class="mt-4">
                            <field name="student_id" class="oe_field_student_id"
                                  options="{'no_create_edit': True}" />
                            <field name="test_id" class="oe_field_test_id"
                                  options="{'no_create_edit': True}" />
                        </group>

                        <group col="4" string="Time">
                            <field name="start" class="oe_field_start" />
                            <field name="end" class="oe_field_end" />
                            <field name="available" class="oe_field_available" widget="float_time" />
                            <field name="elapsed" class="oe_field_elapsed" widget="float_time" />
                        </group>

                        <group col="6" string="Correction scale">
                            <field name="correction_type" class="oe_field_correction_type" colspan="6" />
                            <field name="blank" class="oe_field_blank oe_numeric_score text-warning" string="Unanswered" />
                            <field name="right" class="oe_field_right oe_numeric_score text-success" string="Well" />
                            <field name="wrong" class="oe_field_wrong oe_numeric_score text-danger" string="Bad" />
                        </group>


                        <group col="6">

                            <group col="2" string="Questions" colspan="2">
                                <field name="right_count" class="oe_field_right_count oe_numeric_score text-success" string="No right" />
                                <field name="wrong_count" class="oe_field_wrong_count oe_numeric_score text-danger" string="No wrong" />
                                <field name="blank_count" class="oe_field_wrong_count oe_numeric_score text-warning" string="No blank" />
                                <separator colspan="2" />
                                <field name="question_count" class="oe_field_question_count oe_numeric_score font-weight-bold" string="No total" />
                            </group>

                            <group col="2" string="Result" colspan="2">
                                <field name="right_points" class="oe_field_right_points oe_numeric_score text-success" string="No right" />
                                <field name="wrong_points" class="oe_field_wrong_points oe_numeric_score text-danger" string="No wrong" />
                                <field name="blank_points" class="oe_field_blank_points oe_numeric_score text-warning" string="No blank" />
                                <separator colspan="2" />
                                <field name="final_points" class="oe_field_final_points oe_numeric_score font-weight-bold" string="No total" />
                            </group>

                            <group col="2" string="Score out of 10" colspan="2">
                                <field name="right_score" class="oe_field_right_score oe_numeric_score text-success" string="No right" />
                                <field name="wrong_score" class="oe_field_wrong_score oe_numeric_score text-danger" string="No wrong" />
                                <field name="blank_score" class="oe_field_blank_score oe_numeric_score text-warning" string="No blank" />
                                <separator colspan="2" />
                                <field name="final_score" class="oe_field_final_score oe_numeric_score font-weight-bold" string="No total" />
                            </group>

                            <group col="6" string="Other statistics" colspan="6">
                                <field name="answered_count" class="oe_field_answered_count oe_numeric_score font-weight-bold" string="No answered" />
                                <field name="answer_count" class="oe_field_answer_count oe_numeric_score" string="No answer" />
                                <field name="doubt_count" class="oe_field_doubt_count oe_numeric_score" string="No doubt" />
                            </group>

                        </group>

                        <notebook>
                            <page string="Final answers" class="oe_page_final_answers" accesskey="F">
                                <field name="final_answer_helper_ids" readonly="1"
                                    class="oe_field_final_answer_helper_ids" />
                            </page>
                            <page string="Comments" class="oe_page_description" accesskey="C">
                                <field name="description" class="oe_field_description" />
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for "academy.tests.attempt.resume.helper" -->
        <record id="view_academy_tests_attempt_resume_helper_pivot" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.resume.helper.pivot</field>
            <field name="model">academy.tests.attempt.resume.helper</field>
            <field name="type">pivot</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <pivot string="Pivot table details">
                    <field name="test_id" type="row"/>
                    <field name="student_id" type="row"/>
                    <field name="grade" type="col"/>
                    <field name="id" type="__count__"/>
                </pivot>
            </field>
        </record>

        <!-- Search view for "academy.tests.attempt.resume.helper" -->
        <record id="view_academy_tests_attempt_resume_helper_graph" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.resume.helper.graph</field>
            <field name="model">academy.tests.attempt.resume.helper</field>
            <field name="type">graph</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <graph type="bar">
                    <field name="rating" />
                    <field name="id" type="__count__"/>
                </graph>
            </field>
        </record>

        <!-- Search view for "academy.tests.attempt.resume.helper" -->
        <record id="view_academy_tests_attempt_resume_helper_search" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.resume.helper.search</field>
            <field name="model">academy.tests.attempt.resume.helper</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="academy_tests_attempt_search">
                    <field name="student_id" />
                    <field name="test_id" />

                    <field name="available"/>
                    <field name="scale_pattern" />

                    <!-- <field name="training_action_ids" />
                    <field name="training_activity_ids" />
                    <field name="competency_unit_ids" />
                    <field name="training_module_ids" /> -->

                    <field name="tag_ids" />
                    <field name="topic_ids" />

                    <filter string="Best attempt" name="best_attempt" domain="[('rank', '=', 1)]" />

                    <separator />

                    <filter string="Current week" name="current_week" domain="[
                        ('start', '&gt;=', ((context_today() - relativedelta(weeks=1, weekday=0)).strftime('%Y-%m-%d'))),
                        ('start', '&lt;',  ((context_today() + relativedelta(weeks=0, weekday=0)).strftime('%Y-%m-%d')))
                    ]" />

                    <filter string="Last 8 days" name="last_eight_days" domain="[
                        ('start','&gt;=', ((context_today() - relativedelta(days=8)).strftime('%Y-%m-%d'))),
                        ('start','&lt;',  ((context_today() + relativedelta(days=1)).strftime('%Y-%m-%d')))
                    ]"/>

                    <filter string="Current month" name="current_month" domain="[
                        ('start','&gt;=', (context_today().strftime('%Y-%m-01'))),
                        ('start','&lt;', ((context_today() + relativedelta(months=1)).strftime('%Y-%m-01')))
                    ]"/>

                    <separator />

                    <filter string="My tests" name="to_my_tests"
                        domain="[('test_owner_id', '=', uid)]" />

                    <separator />

                    <filter string="Passed" name="attempt_passed" domain="[('passed', '=', True)]"/>
                    <filter string="Failing" name="attempt_failing" domain="[('passed', '&lt;&gt;', True)]"/>

                </search>
            </field>
        </record>

        <record id="ir_filter_assignment_attempts" model="ir.filters">
            <field name="name">Useful attempt information</field>
            <field name="domain" eval="[]" />
            <field name="context">{
                'pivot_measures': ['__count', 'question_count', 'right_count', 'blank_count', 'wrong_count', 'final_points', 'final_score'],
                'pivot_column_groupby': [],
                'pivot_row_groupby': ['test_id', 'student_id'],
                'search_default_best_attempt': 1
            }</field>
            <field name="model_id">academy.tests.attempt.resume.helper</field>
            <field name="is_default" eval="False" />
            <field name="active">True</field>
        </record>

        <record id="ir_filter_student_attempts" model="ir.filters">
            <field name="name">Useful student information</field>
            <field name="domain" eval="[]" />
            <field name="context">{
                'pivot_measures': ['__count', 'question_count', 'right_count', 'blank_count', 'wrong_count', 'final_points', 'final_score'],
                'pivot_column_groupby': [],
                'pivot_row_groupby': ['test_id'],
                'search_default_best_attempt': 1
            }</field>
            <field name="model_id">academy.tests.attempt.resume.helper</field>
            <field name="is_default" eval="False" />
            <field name="active">True</field>
        </record>

        <record id="ir_filter_test_attempts" model="ir.filters">
            <field name="name">Useful test information</field>
            <field name="domain" eval="[]" />
            <field name="context">{
                'pivot_measures': ['__count', 'question_count', 'right_count', 'blank_count', 'wrong_count', 'final_points', 'final_score'],
                'pivot_column_groupby': [],
                'pivot_row_groupby': ['student_id'],
                'search_default_best_attempt': 1
            }</field>
            <field name="model_id">academy.tests.attempt.resume.helper</field>
            <field name="is_default" eval="False" />
            <field name="active">True</field>
        </record>

        <!-- Main window action for model.name -->
        <record id="action_attempt_statistics_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Attempt statistics</field>
            <field name="res_model">academy.tests.attempt.resume.helper</field>
            <field name="view_mode">tree,pivot,form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_to_my_tests': 1, 'search_default_last_eight_days': 1}</field>
            <field name="search_view_id" ref="view_academy_tests_attempt_resume_helper_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new attempt statistics
                </p><p>
                    There is no any test attempt yet
                </p>
            </field>
        </record>

        <!-- Main menu for model.name -->
        <record id="menu_attempt_statistics" model="ir.ui.menu" >
            <field name="name">Attempt statistics</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_attempt_statistics_act_window" />
            <field name="parent_id" ref="academy_tests.menu_test_monitoring" />
        </record>

    </data>
</openerp>