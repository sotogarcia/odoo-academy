<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- VIEWS: "Test attempts"

            - Model·········: academy.tests.attempt
            - _rec_name·····: student_id
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_base.menu_academy_monitoring
            - View priority·: 16    Sequence····: 10
            - Action help···: There is no any test attempt yet
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <!-- Tree view for "academy.tests.attempt" -->
        <record id="view_academy_tests_attempt_tree" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.tree</field>
            <field name="model">academy.tests.attempt</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="academy_tests_attempt_tree" create="1" delete="1" edit="1"
                    decoration-success="passed" decoration-warning="not passed">
                    <field name="resume_id" invisible="1" />
                    <field name="available" widget="float_time" invisible="1" />
                    <field name="training_action_ids" invisible="1" />
                    <field name="training_activity_ids" invisible="1" />
                    <field name="training_module_ids" invisible="1" />
                    <field name="passed" invisible="1" />

                    <field name="student_id" class="oe_field_student_id" />
                    <field name="test_id" class="oe_field_test_id" />
                    <field name="start" class="oe_field_start" />
                    <field name="elapsed" class="oe_field_elapsed" widget="float_time"  />
                    <field name="questions" class="oe_field_questions" />
                    <field name="answered" class="oe_field_answered" />
                    <field name="final_points" class="oe_field_final_points" />
                </tree>
            </field>
        </record>

        <record id="view_academy_tests_attempt_student_tree" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.tree</field>
            <field name="model">academy.tests.attempt</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="20" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="view_academy_tests_attempt_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='student_id']" position="replace" />
            </field>
        </record>

        <record id="view_academy_tests_attempt_test_tree" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.tree</field>
            <field name="model">academy.tests.attempt</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="20" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="view_academy_tests_attempt_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='test_id']" position="replace" />
            </field>
        </record>

        <!-- Form view for "academy.tests.attempt" -->
        <record id="view_academy_tests_attempt_form" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.form</field>
            <field name="model">academy.tests.attempt</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="academy_tests_attempt_form" create="1" delete="1" edit="1">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                            <button name="close" type="object"
                                class="oe_stat_button oe_read_only" icon="fa-close"
                                attrs="{'invisible': [('closed', '=', True)]}">
                                <span>Close</span>
                            </button>
                        </div>

                        <div class="oe_title w-100">
                            <field name="active" invisible="1"/>
                            <field name="closed" invisible="1" />
                            <field name="id" invisible="1" />
                            <label for="display_name" class="oe_edit_only" />
                            <h1>
                               <field name="display_name" class="oe_field_display_name"
                                    attrs="{'invisible': [('id', '=', False)]}"/>
                                <span attrs="{'invisible': [('id', '!=', False)]}">New attempt</span>
                            </h1>
                        </div>

                        <group col="4">
                            <field name="student_id" class="od_field_student_id"
                                placeholder="Student" options="{'no_create_edit': True}" />
                            <field name="test_id" class="od_field_test_id"
                                placeholder="Test" options="{'no_create_edit': True}" />

                            <separator colspan="4" string="Time" />
                            <field name="available" class="od_field_available"
                                placeholder="Available time" widget="float_time" />
                            <separator colspan="2" />
                            <field name="start" class="od_field_start"
                                placeholder="Start date/time" />
                            <field name="end" class="od_field_end"
                                placeholder="End date/time" />

                            <separator colspan="4" string="Correction scale" />
                            <field name="correction_type" class="oe_field_correction_type" />
                            <field name="right" class="oe_field_right" />
                            <field name="wrong" class="oe_field_wrong" />
                            <field name="blank" class="oe_field_blank" />

                            <separator colspan="4" string="Statistics" />
                            <field name="questions" class="oe_field_questions" />
                            <field name="answered" class="oe_field_answered" />
                            <field name="right_count" class="oe_field_right_count" />
                            <field name="wrong_count" class="oe_field_wrong_count" />
                            <field name="answer_count" class="oe_field_answer_count" />
                            <field name="doubt_count" class="oe_field_doubt_count" />

                            <separator colspan="4" string="Score" />
                            <field name="right_points" class="oe_field_right_points" />
                            <field name="wrong_points" class="oe_field_wrong_points" />
                            <field name="blank_points" class="oe_field_blank_points" />
                            <field name="final_points" class="oe_field_final_points" />
                        </group>

                        <notebook>
                            <page string="Comments" class="oe_page_description" accesskey="C">
                                <field name="description" class="oe_field_description" />
                            </page>
                            <page string="Final answers" class="oe_page_final_answers" accesskey="F">
                                <field name="attempt_final_answer_ids" class="oe_field_attempt_final_answer_ids"
                                    readonly="1" context="{'show_question_id': 1}" />
                            </page>
                            <page string="Answers" class="oe_page_answers" accesskey="A">
                                <field name="attempt_answer_ids" class="oe_field_attempt_answer_ids"
                                    context="{'default_attempt_id': id, 'show_question_id': 1}" />
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for "academy.tests.attempt" -->
        <record id="view_academy_tests_attempt_search" model="ir.ui.view">
            <field name="name">view.academy.tests.attempt.search</field>
            <field name="model">academy.tests.attempt</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="academy_tests_attempt_search">
                    <field name="student_id" />
                    <field name="test_id" />
                    <field name="start" />
                    <field name="available"/>
                    <field name="elapsed" />
                    <field name="correction_type" />

                    <field name="training_action_ids" />
                    <field name="training_activity_ids" />
                    <field name="competency_unit_ids" />
                    <field name="training_module_ids" />

                    <field name="tag_ids" />
                    <field name="topic_ids" />

                    <filter string="Current week" name="current_week" domain="[
                        ('start', '&gt;=', ((context_today() - relativedelta(weeks=1, weekday=0)).strftime('%Y-%m-%d'))),
                        ('start', '&lt;',  ((context_today() + relativedelta(weeks=0, weekday=0)).strftime('%Y-%m-%d')))
                    ]" />

                    <filter string="Last 8 days" name="last_eight_days" domain="[
                        ('start','&gt;=', ((context_today() - relativedelta(days=8)).strftime('%Y-%m-%d'))),
                        ('start','&lt;',  ((context_today() + relativedelta(days=1)).strftime('%Y-%m-%d')))
                    ]"/>

                    <filter string="Current month" name="current_month" domain="[
                        ('start','&gt;=', (context_today().strftime('%Y-%m-01'))),
                        ('start','&lt;', ((context_today() + relativedelta(months=1)).strftime('%Y-%m-01')))
                    ]"/>

                    <separator />

                    <filter string="My tests" name="to_my_tests"
                        domain="[('test_owner_id', '=', uid)]" />

                    <separator />

                    <filter string="Passed" name="attempt_passed" domain="[('passed', '=', True)]"/>
                    <filter string="Failing" name="attempt_failing" domain="[('passed', '&lt;&gt;', True)]"/>

                </search>
            </field>
        </record>

        <!-- Main window action for model.name -->
        <record id="action_test_attempts_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Test attempts</field>
            <field name="res_model">academy.tests.attempt</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_to_my_tests': 1, 'search_default_last_eight_days': 1}</field>
            <field name="search_view_id" ref="view_academy_tests_attempt_search" />
            <field name="help" type="html">
               <p class="oe_view_nocontent_create">
                    Click to add new test attempts
                </p>
                <p>
                    There are no test attempts yet
                </p>
            </field>
        </record>

        <!-- Main menu for model.name -->
        <record id="menu_test_attempts" model="ir.ui.menu" >
            <field name="name">Test attempts</field>
            <field name="sequence" eval="25" />
            <field name="action" ref="action_test_attempts_act_window" />
            <field name="parent_id" ref="academy_base.menu_academy_monitoring" />
        </record>

    </data>
</openerp>
