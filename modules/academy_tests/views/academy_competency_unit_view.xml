<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="view_academy_competency_unit_form_add_test_page" model="ir.ui.view">
            <field name="name">Extend competency unit form view adding test topics</field>
            <field name="model">academy.competency.unit</field>
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="academy_base.view_academy_competency_unit_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="create_test_template"
                            string="Template"
                            type="object"
                            default_focus="0"
                            icon="fa-list-alt"
                            help="Create new test template" />
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Tests" class="oe_page_tests" accesskey="T">
                        <field name="competency_test_ids" class="oe_field_tests_ids oe_edit_only" />

                        <field name="competency_available_test_ids"
                               class="oe_field_available_test_ids oe_read_only" />
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Tree view for "academy.competency.unit" -->
        <record id="view_academy_competency_unit_embed_tree" model="ir.ui.view">
            <field name="name">view.academy.competency.unit.tree</field>
            <field name="model">academy.competency.unit</field>
            <field name="type">tree</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="academy_base.view_academy_competency_unit_embed_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='hours']" position="after">
                    <button name="create_test_template"
                            string="Template"
                            type="object"
                            default_focus="0"
                            icon="fa-list-alt"
                            help="Create new test template" />
                </xpath>
                <xpath expr="//field[@name='training_activity_id']" position="replace" />
                <xpath expr="//field[@name='training_module_id']" position="replace" />
            </field>
        </record>

    </data>
</openerp>
