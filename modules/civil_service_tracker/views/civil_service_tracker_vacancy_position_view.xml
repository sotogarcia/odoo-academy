<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <!-- VIEWS: "Civil services Vacancy Position"

            - Model·········: civil.service.tracker.vacancy.position
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: menu_civil_service_tracker_configuration
            - View priority·: 16    Sequence····: 10
            - Action help···: No vacancy positions have been defined yet.
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <!-- List view for "civil.service.tracker.vacancy.position" -->
  <record id="view_civil_service_tracker_vacancy_position_tree" model="ir.ui.view">
    <field name="name">view.civil.service.tracker.vacancy.position.tree</field>
    <field name="model">civil.service.tracker.vacancy.position</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <list string="civil_service_tracker_vacancy_position_tree" create="1" delete="1" edit="1">
        <field name="id" column_invisible="1"/>
        <field name="active" column_invisible="1"/>

        <field name="sequence" class="oe_field_sequence" widget="handle"/>
        <field name="selection_process_id" class="oe_field_selection_process_id"/>
        <field name="vacancy_type_id" class="oe_field_vacancy_type_id"/>
        <field name="name" class="oe_field_name"/>
        <field name="position_quantity" class="oe_field_position_quantity"/>
      </list>
    </field>
  </record>

  <!-- Form view for "civil.service.tracker.vacancy.position" -->
  <record id="view_civil_service_tracker_vacancy_position_form" model="ir.ui.view">
    <field name="name">view.civil.service.tracker.vacancy.position.form</field>
    <field name="model">civil.service.tracker.vacancy.position</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <form string="civil_service_tracker_vacancy_position_form" create="1" delete="1" edit="1">
        <sheet>
          <field name="id" invisible="1"/>
          <field name="active" invisible="1"/>

          <div class="oe_button_box" name="button_box"/>
          <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>

          <div class="oe_title">
            <label for="name" class="oe_edit_only"/>
            <h1>
              <field name="name" class="oe_field_name"/>
            </h1>
          </div>

          <group col="6" string="Details">
            <field name="vacancy_type_id" class="oe_field_vacancy_type_id" colspan="4"/>
            <field name="position_quantity" class="oe_field_position_quantity" colspan="2"/>

            <field name="selection_process_id" class="oe_field_selection_process_id" colspan="4"/>
            <field name="sequence" class="oe_field_sequence" colspan="2"/>
          </group>

          <group col="2" string="Description">
            <field name="description" class="oe_field_description" nolabel="1"/>
          </group>

        </sheet>
      </form>
    </field>
  </record>

  <!-- Search view for "civil.service.tracker.vacancy.position" -->
  <record id="view_civil_service_tracker_vacancy_position_search" model="ir.ui.view">
    <field name="name">view.civil.service.tracker.vacancy.position.search</field>
    <field name="model">civil.service.tracker.vacancy.position</field>
    <field name="type">search</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <search string="civil_service_tracker_vacancy_position_search">
        <field name="name"/>

        <filter string="By process" name="civil_service_tracker_employment_group_by_process"
          domain="[]" context="{'group_by': 'selection_process_id'}"
          help="Group by selection process"/>

        <filter string="By type" name="civil_service_tracker_employment_group_by_type" domain="[]"
          context="{'group_by': 'vacancy_type_id'}" help="Group by vacancy type"/>

        <filter name="inactive" string="Archived" domain="[('active','=',False)]"
          help="Filter to show records marked as inactive."/>
      </search>
    </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_civil_services_vacancy_position_act_window" model="ir.actions.act_window">
    <field name="type">ir.actions.act_window</field>
    <field name="name">Vacancy positions</field>
    <field name="res_model">civil.service.tracker.vacancy.position</field>
    <field name="view_mode">list,form</field>
    <field name="path">civil-service-vacancy-position</field>
    <field name="target">current</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="search_view_id" ref="view_civil_service_tracker_vacancy_position_search"/>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create"> Click to add new vacancy positions. </p>
      <p> No vacancy positions have been defined yet. </p>
    </field>
  </record>

  <!-- Main menu for model.name -->
  <record id="menu_civil_services_vacancy_position" model="ir.ui.menu">
    <field name="name">Vacancy Positions</field>
    <field name="sequence" eval="80"/>
    <field name="action" ref="action_civil_services_vacancy_position_act_window"/>
    <field name="parent_id" ref="menu_civil_service_tracker_configuration"/>
  </record>

  <!-- ······························································· -->

  <record id="view_civil_service_tracker_vacancy_position_tree_embed" model="ir.ui.view">
    <field name="name">view.civil.service.tracker.vacancy.position.tree</field>
    <field name="model">civil.service.tracker.vacancy.position</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="24"/>
    <field name="active" eval="True"/>
    <field name="inherit_id" ref="view_civil_service_tracker_vacancy_position_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//list" position="attributes">
        <attribute name="create">1</attribute>
        <attribute name="delete">1</attribute>
        <attribute name="edit">1</attribute>
        <attribute name="editable">bottom</attribute>
      </xpath>
      <xpath expr="//field[@name='selection_process_id']" position="replace"/>
    </field>
  </record>

</odoo>
