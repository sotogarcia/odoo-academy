<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data noupdate="0">

    <record id="res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.civil.service.tracker</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="20"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form" position="inside">
          <app string="Civil Service" name="civil_service_tracker" groups="base.group_system">

            <!-- Settings block: begin -->
            <block title="Responsibility" name="civil_service_tracker_responsible_users">

              <setting string="Selection Process Supervisor" help="Person responsible for supervising civil service selection processes.">
                <div class="content-group mt8">
                  <field name="tracking_responsible_id" class="oe_inline"
                    options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"
                    reload_on_change="0"/>
                </div>
              </setting>

              <setting string="ERP Manager" help="Person in charge of maintaining the civil service tracker module.">
                <div class="content-group mt8">
                  <field name="erp_manager_id" class="oe_inline"
                    options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"
                    reload_on_change="0"/>
                </div>
              </setting>

            </block>
            <!-- Settings block: end -->

            <!-- Settings block: begin -->
            <block title="Usability" name="civil_service_tracker_functional_users">

              <setting string="Selection process short name" help="Show short name in selection process displays.">
                <div class="content-group mt8">
                  <field name="display_process_short_name" class="oe_inline"
                    options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"
                    reload_on_change="1"/>
                </div>
              </setting>

              <setting string="Main window" help="Main window associated with civil service tracker menu.">
                <div class="content-group mt8">
                  <field name="main_act_window_id" class="oe_inline"
                    options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"/>
                </div>
              </setting>

            </block>
            <!-- Settings block: end -->

            <!-- Settings block: begin -->
            <block title="Defaults" name="civil_service_tracker_defaults">

              <setting string="Selection method" help="Method used to select candidates (e.g. exam, merit-based).">
                <div class="content-group mt8">
                  <field name="selection_method_id" class="oe_inline"
                    options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"/>
                </div>
              </setting>

              <setting string="Access_type" help="Type of access to the position (e.g. internal promotion).">
                <div class="content-group mt8">
                  <field name="access_type_id" class="oe_inline"
                    options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"/>
                </div>
              </setting>

            </block>
            <!-- Settings block: end -->

          </app>

        </xpath>
      </field>
    </record>
  </data>
</odoo>
