  <record id="view_civil_service_tracker_process_event_calendar" model="ir.ui.view">
    <field name="name">view.civil.service.tracker.process.event.calendar</field>
    <field name="model">civil.service.tracker.process.event</field>
    <field name="arch" type="xml">
      <!-- date_stop="stop_datetime" all_day="all_day" quick_add="false" -->
      <calendar string="Events Calendar" date_start="event_date" mode="month" quick_create="0"
        color="selection_process_id" event_open_popup="True">
        <field name="event_type_id" class="oe_field_event_type_id"
          options="{'no_quick_create': True, 'no_create': True, 'no_open': True}"/>
        <field name="selection_process_id" class="oe_field_selection_process_id"
          options="{'no_quick_create': True, 'no_create': True, 'no_open': False}"/>
        <field name="attachment_url" class="oe_field_attachment_url" widget="url_truncated"/>
      </calendar>
    </field>
  </record>

  <!-- Search view for "civil.service.tracker.process.event" -->
  <record id="view_civil_service_tracker_process_event_search" model="ir.ui.view">
    <field name="name">view.civil.service.tracker.process.event.search</field>
    <field name="model">civil.service.tracker.process.event</field>
    <field name="type">search</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <search string="civil_service_tracker_process_event_search">
        <field name="name"/>
        <field name="event_date"/>
        <field name="event_type_id"/>
        <field name="selection_process_id"/>
        <field name="issuer_partner_id"/>

        <separator/>
        <filter string="By process" name="group_by_selection_process_id" domain="[]"
          context="{'group_by': 'selection_process_id'}"
          help="Group events by their associated selection process."/>

        <filter string="By issuer" name="group_by_issuer_partner_id" domain="[]"
          context="{'group_by': 'issuer_partner_id'}"
          help="Group events by the entity responsible for publishing them."/>

        <filter string="By type" name="group_by_event_type_id" domain="[]"
          context="{'group_by': 'event_type_id'}"
          help="Group events by their classification or category."/>

        <separator/>
        <filter name="inactive" string="Archived" domain="[('active','=',False)]"
          help="Filter to show records marked as inactive."/>
      </search>
    </field>
  </record>

  <!-- Main window action for model.name -->
  <record id="action_civil_services_process_event_act_window" model="ir.actions.act_window">
    <field name="type">ir.actions.act_window</field>
    <field name="name">Process events</field>
    <field name="res_model">civil.service.tracker.process.event</field>
    <field name="view_mode">calendar,list,form</field>
    <field name="path">civil-service-process-event</field>
    <field name="target">current</field>
    <field name="domain">[]</field>
    <field name="context">{'include_process_in_event_name': True}</field>
    <field name="search_view_id" ref="view_civil_service_tracker_process_event_search"/>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create"> Click to add new process events. </p>
      <p> No process events have been defined yet. </p>
    </field>
  </record>

  <!-- Main menu for model.name -->
  <record id="menu_civil_services_process_event" model="ir.ui.menu">
    <field name="name">Process Events</field>
    <field name="sequence" eval="20"/>
    <field name="action" ref="action_civil_services_process_event_act_window"/>
    <field name="parent_id" ref="menu_civil_service_tracker_tracking"/>
  </record>

  <!-- Attach the window action to the module main menú
