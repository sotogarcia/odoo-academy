  <!-- List view for "civil.service.tracker.process.event" -->
  <record id="view_civil_service_tracker_process_event_tree" model="ir.ui.view">
    <field name="name">view.civil.service.tracker.process.event.tree</field>
    <field name="model">civil.service.tracker.process.event</field>
    <field name="type">list</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <list string="civil_service_tracker_process_event_tree" create="1" delete="1" edit="1">
        <field name="id" column_invisible="1"/>
        <field name="active" column_invisible="1"/>
        <field name="attachment_id" column_invisible="1"/>

        <field name="selection_process_id" class="oe_field_selection_process_id"/>
        <field name="name" class="oe_field_name"/>
        <field name="event_date" class="oe_field_event_date"/>
        <field name="event_type_id" class="oe_field_event_type_id"/>
        <field name="issuer_partner_id" class="oe_field_issuer_partner_id" optional="hide"/>
        <field name="attachment_id" class="oe_field_attachment_id" optional="hide"/>
        <field name="attachment_url" class="oe_field_effective_url" widget="url_truncated"/>
        <field name="description" class="oe_field_description" optional="show"/>
      </list>
    </field>
  </record>

  <!-- Form view for "civil.service.tracker.process.event" -->
  <record id="view_civil_service_tracker_process_event_form" model="ir.ui.view">
    <field name="name">view.civil.service.tracker.process.event.form</field>
    <field name="model">civil.service.tracker.process.event</field>
    <field name="type">form</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16"/>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <form string="civil_service_tracker_process_event_form" create="1" delete="1" edit="1">
        <sheet>
          <field name="id" invisible="1"/>
          <field name="active" invisible="1"/>
          <field name="attachment_id" invisible="1"/>

          <div class="oe_button_box" name="button_box"/>
          <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>

          <div class="oe_title">
            <label for="name" class="oe_edit_only"/>
            <h1>
              <field name="name" class="oe_field_name" readonly="event_type_id == False"/>
            </h1>
          </div>

          <group col="4">
            <field name="event_type_id" class="oe_field_event_type_id"/>
            <field name="selection_process_id" class="oe_field_selection_process_id"
              options="{'no_quick_create': True, 'no_create': False, 'no_open': False}"
              readonly="event_type_id == False"/>
            <field name="event_date" class="oe_field_event_date" readonly="event_type_id == False"/>
            <field name="all_day" class="oe_field_all_day" readonly="event_type_id == False"/>
            <field name="issuer_partner_id" class="oe_field_issuer_partner_id"
              options="{'no_quick_create': True, 'no_create': False, 'no_open': False}"/>
            <field name="attachment_url" class="oe_field_attachment_url oe_read_only"
              widget="url_truncated" invisible="attachment_id == False"/>
          </group>

          <group col="4" string="Attachment" class="oe_edit_only">
            <field name="attach_new_type" class="oe_field_attach_new_type o_horizontal"
              widget="radio" options="{'horizontal': true}" readonly="event_type_id == False"/>

            <field name="attach_new_url" class="oe_field_attach_new_url" widget="url" colspan="4"
              string="New URL"
              invisible="['|', ('event_type_id', '=', False), ('attach_new_type', '&lt;&gt;', 'url')]"/>

            <field name="attach_new_binary" filename="attach_new_name"
              class="oe_field_attach_new_binary" widget="binary"
              invisible="['|', ('event_type_id', '=', False), ('attach_new_type', '&lt;&gt;', 'binary')]"/>
            <field name="attach_new_name" class="oe_field_attach_new_name"
              invisible="['|', ('event_type_id', '=', False), ('attach_new_type', '&lt;&gt;', 'binary')]"
            />
          </group>

          <group col="2" string="Description">
            <field name="description" class="oe_field_description" nolabel="1"/>
          </group>

        </sheet>

      </form>
    </field>
  </record>

