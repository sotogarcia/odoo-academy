<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- Assets -->
        <template id="civil_service_tracker_backend_assets" name="Civil service tracker: Backend assets " inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/civil_service_tracker/static/src/css/styles-backend.css" />
                <script type="text/javascript" src="/civil_service_tracker/static/src/js/url_truncated_widget.js" />
                <script type="text/javascript" src="/civil_service_tracker/static/src/js/header_view_buttons.js" />
                <script type="text/javascript" src="/civil_service_tracker/static/src/js/quick_offer_form_patch.js" />
            </xpath>
        </template>

        <!-- Menus -->
        <record id="menu_civil_service_tracker_root" model="ir.ui.menu" >
            <field name="name">Civil service</field>
            <field name="sequence" eval="10" />
            <field name="web_icon">civil_service_tracker,static/description/icon.png</field>
            <field name="groups_id" eval="[(4, ref('civil_service_tracker.group_civil_service_tracker_consultant'))]"/>
            <!-- The action will be deffined in process event views file -->
        </record>

        <record id="menu_civil_service_tracker_tracking" model="ir.ui.menu" >
            <field name="name">Tracking</field>
            <field name="sequence" eval="15" />
            <field name="parent_id" ref="civil_service_tracker.menu_civil_service_tracker_root" />
            <field name="groups_id" eval="[(4, ref('civil_service_tracker.group_civil_service_tracker_operator'))]"/>
            <field name="action" eval="False" />
        </record>

        <record id="menu_civil_service_tracker_catalog" model="ir.ui.menu" >
            <field name="name">Catalog</field>
            <field name="sequence" eval="20" />
            <field name="parent_id" ref="civil_service_tracker.menu_civil_service_tracker_root" />
            <field name="groups_id" eval="[(4, ref('civil_service_tracker.group_civil_service_tracker_operator'))]"/>
            <field name="action" eval="False" />
        </record>

        <record id="menu_civil_service_tracker_tools" model="ir.ui.menu" >
            <field name="name">Tools</field>
            <field name="sequence" eval="25" />
            <field name="parent_id" ref="civil_service_tracker.menu_civil_service_tracker_root" />
            <field name="groups_id" eval="[(4, ref('civil_service_tracker.group_civil_service_tracker_operator'))]"/>
            <field name="action" eval="False" />
        </record>

        <record id="menu_civil_service_tracker_configuration" model="ir.ui.menu" >
            <field name="name">Configuration</field>
            <field name="sequence" eval="30" />
            <field name="parent_id" ref="civil_service_tracker.menu_civil_service_tracker_root" />
            <field name="groups_id" eval="[(4, ref('civil_service_tracker.group_civil_service_tracker_technician'))]"/>
            <field name="action" eval="False" />
        </record>

    </data>
</openerp>
