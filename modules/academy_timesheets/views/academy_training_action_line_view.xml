<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

        <record id="view_academy_training_action_line_search" model="ir.ui.view">
            <field name="name">view.academy.training.action.line.form</field>
            <field name="model">academy.training.action.line</field>
            <field name="type">search</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="academy_base.view_academy_training_action_line_search" />
            <field name="arch" type="xml">
                <xpath expr="//filter" position="before">

                    <field name="session_count" />

                    <separator />

                    <filter string="With sessions"
                        name="with_sessions"
                        domain="[('session_count', '&gt;', 0)]"
                        context="{}"
                        help="Competition units that have a scheduled training session" />

                    <filter string="Without sessions"
                        name="without_sessions"
                        domain="[('session_count', '&lt;=', 0)]"
                        context="{}"
                        help="Competition units that have a scheduled training session" />
                </xpath>
            </field>
        </record>

</odoo>
