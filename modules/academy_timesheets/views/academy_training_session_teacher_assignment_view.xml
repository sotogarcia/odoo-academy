<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

        <record id="view_academy_training_session_teacher_assignment_tree" model="ir.ui.view">
            <field name="name">Teachers conducting the training session</field>
            <field name="model">academy.training.session.teacher.assignment</field>
            <field name="type">list</field>
            <field name="mode">primary</field>
            <field name="priority" eval="32" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <list string="view_academy_training_session_teacher_assignment_tree" create="1" delete="1" edit="1" editable="bottom">
                    <field name="date_start" column_invisible="1" />
                    <field name="date_stop" column_invisible="1" />
                    <field name="session_id" column_invisible="1" />
                    <field name="sequence" class="oe_field_sequence oe_edit_only" widget="handle" />
                    <field name="teacher_id" class="oe_field_teacher_id" />
                    <field name="email" class="oe_field_email" readonly="1" widget="email" />
                    <field name="phone" class="oe_field_phone" readonly="1" widget="phone" />
                </list>
            </field>
        </record>

        <record id="view_academy_training_session_teacher_assignment_form" model="ir.ui.view">
            <field name="name">Teacher conducting the training session</field>
            <field name="model">academy.training.session.teacher.assignment</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id"  />
            <field name="arch" type="xml">
                <form string="Teacher" create="1" delete="1" edit="1">
                    <sheet>
                        <div class="oe_title">
                            <label for="teacher_id" class="oe_edit_only" />
                            <h1><field name="teacher_id" /></h1>
                        </div>

                        <group col="2">
                            <field name="phone" class="oe_field_phone" />
                            <field name="email" class="oe_field_email" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

</odoo>


