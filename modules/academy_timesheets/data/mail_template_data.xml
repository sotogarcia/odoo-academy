<odoo noupdate="0">

  <record id="mail_template_group_schedule" model="mail.template">
    <field name="name">Group schedule</field>
    <field name="subject">${object.name}</field>
    <field name="email_from">"${(object.company_id.name or user.company_id.name or user.name)}" &lt;${(object.company_id.email or user.company_id.email or user.email)}&gt;</field>
    <field name="email_to"/>
    <field name="reply_to">${user.name} &lt;${user.email}&gt;</field>
    <!-- <field name="report_template" ref="academy_timesheets.action_report_academy_timesheets_training_action"/> -->
    <!-- <field name="report_name">${object.name}_schedule</field> -->
    <field name="auto_delete" eval="True"/>
    <field name="model_id" ref="academy_base.model_academy_training_action"/>

    <field name="body_html"><![CDATA[
<table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family: Verdana, Arial, sans-serif; color: #454748; width: 100%; border-collapse: separate;">
  <tr>
    <td align="center">
      <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse: separate;">
        <tbody>

          <!-- HEADER -->
          <tr>
            <td align="center" style="min-width: 590px;">
              <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0 8px; border-collapse: separate;">
                <tr>
                  <td valign="middle">
                    <span style="font-size: 10px;">Group schedule</span><br/>
                    <span style="font-size: 20px; font-weight: bold;"></span>
                  </td>
                  <td valign="middle" align="right">
                    <img src="/logo.png?company=" style="padding: 0; margin: 0; height: auto; width: 80px;" alt=""/>
                  </td>
                </tr>
                <tr>
                  <td colspan="2" style="text-align:center;">
                    <hr width="100%" style="background-color:#ccc; border: none; clear: both; display: block; font-size: 0; min-height: 1px; line-height: 0; margin: 16px 0;"/>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <!-- CONTENT -->
          <tr>
            <td align="center" style="min-width: 590px;">
              <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0 8px; border-collapse: separate;">
                <tr>
                  <td valign="top" style="font-size: 13px;">
                    <p style="margin: 0.5em 0;">Hello,</p>
                    <p style="margin: 0.5em 0;">
                      I'm attaching, in PDF format, the class schedule corresponding to the group
                      "<b><t t-out="object.name"/></b>".
                    </p>
                    <p style="margin: 0.5em 0;">
                      It is possible that to view the document you need to install a suitable viewer,
                      such as
                      <a href="https://www.adobe.com/es/acrobat/pdf-reader.html">Adobe Reader</a>.
                    </p>
                    <p style="margin: 0.5em 0;">Thanks,</p>
                    <p style="margin: 0.5em 0;">
                      <a t-att-href="'mailto:%s' % user.email" t-att-title="'Send mail to %s' % user.name">
                        <t t-out="user.name"/>
                      </a>
                    </p>
                  </td>
                </tr>
                <tr>
                  <td style="text-align:center;">
                    <hr width="100%" style="background-color:#ccc; border: none; clear: both; display: block; font-size: 0; min-height: 1px; line-height: 0; margin: 16px 0;"/>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <!-- FOOTER -->
          <tr>
            <td align="center" style="min-width: 590px;">
              <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px; background-color: white; font-size: 11px; padding: 0 8px; border-collapse: separate;">
                <tbody>
                  <tr>
                    <td valign="middle" align="left"></td>
                  </tr>
                  <tr>
                    <td valign="middle" align="left" style="opacity: 0.7;">
                      <t t-if="user.company_id.phone">
                        <t t-out="user.company_id.phone"/>
                      </t>
                      <t t-if="user.company_id.email">
                        <span> | </span>
                        <a t-att-href="'mailto:%s' % user.company_id.email" style="color:#454748;">
                          <t t-out="user.company_id.email"/>
                        </a>
                      </t>
                      <t t-if="user.company_id.website">
                        <span> | </span>
                        <a t-att-href="user.company_id.website" style="color:#454748;">
                          <t t-out="user.company_id.website"/>
                        </a>
                      </t>
                    </td>
                  </tr>
                </tbody>
              </table>
            </td>
          </tr>

        </tbody>
      </table>
    </td>
  </tr>
</table>
    ]]></field>
  </record>

