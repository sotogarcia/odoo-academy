  <record id="mail_template_training_session_details" model="mail.template">
    <field name="name">Training session details</field>
    <field name="subject">${object.task_name}</field>
    <field name="email_from">"${(object.company_id.name or user.company_id.name or user.name)}" &lt;${(object.company_id.email or user.company_id.email or user.email)}&gt;</field>
    <field name="email_to"/>
    <field name="reply_to">${user.name} &lt;${user.email}&gt;</field>
    <!-- <field name="report_template"/> -->
    <!-- <field name="report_name"/> -->
    <field name="auto_delete" eval="True"/>
    <field name="model_id" ref="academy_timesheets.model_academy_training_session"/>
    <field name="body_html"><![CDATA[
<table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family: Verdana, Arial, sans-serif; color: #454748; width: 100%; border-collapse: separate;">
  <tr>
    <td align="center">
      <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse: separate;">
        <tbody>

          <!-- HEADER -->
          <tr>
            <td align="center" style="min-width: 590px;">
              <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0 8px; border-collapse: separate;">
                <tr>
                  <td valign="middle">
                    <span style="font-size: 10px;">Session details</span><br/>
                    <span style="font-size: 20px; font-weight: bold;"></span>
                  </td>
                  <td valign="middle" align="right">
                    <img src="/logo.png?company=" style="padding: 0; margin: 0; height: auto; width: 80px;" alt=""/>
                  </td>
                </tr>
                <tr>
                  <td colspan="2" style="text-align:center;">
                    <hr width="100%" style="background-color:#ccc; border: none; clear: both; display: block; font-size: 0; min-height: 1px; line-height: 0; margin: 16px 0;"/>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <!-- CONTENT -->
          <tr>
            <td align="center" style="min-width: 590px;">
              <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0 8px; border-collapse: separate;">
                <tr>
                  <td valign="top" style="font-size: 13px;">

                    <p style="margin: 0.5em 0;">Hello,</p>

                    <t t-if="object.kind == 'teach'">
                      <p style="margin: 0.5em 0;">
                        I'm reaching out to you to provide you with information regarding the training session
                        directed towards the group
                        <strong><t t-out="object.training_action_id.name"/></strong>,
                        part of the <strong><t t-out="object.training_program_id.name"/></strong> course,
                        which will focus on the subject
                        <strong><t t-out="object.action_line_id.competency_name"/></strong>.
                      </p>
                    </t>

                    <t t-if="object.kind == 'task'">
                      <p style="margin: 0.5em 0;">
                        I'm reaching out to you to provide you with information regarding the scheduled task
                        <strong><t t-out="object.task_id.display_name"/></strong>.
                      </p>
                    </t>

                    <p style="margin: 0.5em 0;">Following are the essential details about it:</p>

                    <ul>
                      <li><strong>Start:</strong> <t t-out="object.localized_dt(object.date_start, object.get_tz())"/></li>
                      <li><strong>End:</strong> <t t-out="object.localized_dt(object.date_stop, object.get_tz())"/></li>
                      <li><strong>Duration:</strong> <t t-out="object.date_delay_str()"/></li>
                      <t t-if="object.primary_facility_id">
                        <li><strong>Main venue:</strong> <t t-out="object.primary_facility_id.name"/></li>
                      </t>
                      <t t-if="object.primary_teacher_id">
                        <li><strong>Principal:</strong> <t t-out="object.primary_teacher_id.name"/></li>
                      </t>
                    </ul>

                    <t t-if="len(object.teacher_assignment_ids) &gt; 1">
                      <p style="margin: 0.5em 0;">The following list includes all the users who will participate in the session:</p>
                      <ol>
                        <t t-foreach="object.teacher_assignment_ids" t-as="assignment">
                          <li>
                            <a t-att-href="'mailto:%s' % assignment.teacher_id.email" style="color: inherit; text-decoration: none;">
                              <t t-out="assignment.teacher_id.name"/>
                            </a>
                          </li>
                        </t>
                      </ol>
                    </t>

                    <t t-if="len(object.reservation_ids) &gt; 1">
                      <p style="margin: 0.5em 0;">The facilities, services and/or resources described below will be used:</p>
                      <ul>
                        <t t-foreach="object.reservation_ids" t-as="reservation">
                          <li>
                            <t t-out="reservation.facility_id.display_name"/>
                            <i>(<t t-out="reservation.facility_id.complex_id.name"/>)</i>
                          </li>
                        </t>
                      </ul>
                    </t>

                    <t t-if="object.state == 'ready' and object.env.context.get('include_schedule_url', False)">
                      <p>This session has been confirmed and therefore is reflected in your weekly schedule. You can quickly access it by following any of the following links:</p>
                      <ul>
                        <li>
                          <a target="_blank" t-att-href="'/academy-timesheets/teacher/schedule?week=%s&amp;format=html&amp;download=False' % object.date_start.strftime('%Y-%m-%d')">
                            View it online
                          </a>
                        </li>
                        <li>
                          <a target="_blank" t-att-href="'/academy-timesheets/teacher/schedule?week=%s&amp;format=pdf&amp;download=True' % object.date_start.strftime('%Y-%m-%d')">
                            Download it as a PDF
                          </a>
                        </li>
                      </ul>
                    </t>

                    <p style="margin: 0.5em 0;">
                      If you have any further questions about this or other sessions, please don't hesitate to reach out to us.
                    </p>

                    <p>Best regards,</p>

                    <p style="margin: 0.5em 0;">
                      <a t-att-href="'mailto:%s' % user.email" t-att-title="'Send mail to %s' % user.name">
                        <t t-out="user.name"/>
                      </a>
                    </p>
                  </td>
                </tr>
                <tr>
                  <td style="text-align:center;">
                    <hr width="100%" style="background-color:#ccc; border: none; clear: both; display: block; font-size: 0; min-height: 1px; line-height: 0; margin: 16px 0;"/>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <!-- FOOTER -->
          <tr>
            <td align="center" style="min-width: 590px;">
              <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px; background-color: white; font-size: 11px; padding: 0 8px; border-collapse: separate;">
                <tbody>
                  <tr>
                    <td valign="middle" align="left"></td>
                  </tr>
                  <tr>
                    <td valign="middle" align="left" style="opacity: 0.7;">
                      <t t-if="user.company_id.phone">
                        <t t-out="user.company_id.phone"/>
                      </t>
                      <t t-if="user.company_id.email">
                        <span> | </span>
                        <a t-att-href="'mailto:%s' % user.company_id.email" style="color:#454748;">
                          <t t-out="user.company_id.email"/>
                        </a>
                      </t>
                      <t t-if="user.company_id.website">
                        <span> | </span>
                        <a t-att-href="user.company_id.website" style="color:#454748;">
                          <t t-out="user.company_id.website"/>
                        </a>
                      </t>
                    </td>
                  </tr>
                </tbody>
              </table>
            </td>
          </tr>

        </tbody>
      </table>
    </td>
  </tr>
</table>
    ]]></field>
  </record>

</odoo>
