<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="academy_base.academy_training_action_demo_1" model="academy.training.action">
            <field name="repeat" eval="True" />
            <field name="date_base" eval="(DateTime.today() - timedelta(days=DateTime.today().weekday())).strftime('%Y-%m-%d')" />
            <field name="finish_date" eval="(DateTime.today() + relativedelta(months=3)).strftime('%Y-%m-%d')" />
            <field name="time_start" eval="8" />
            <field name="time_stop" eval="12" />
        </record>

        <record id="academy_base.academy_training_action_demo_2" model="academy.training.action">
            <field name="repeat" eval="True" />
            <field name="date_base" eval="(DateTime.today() - timedelta(days=DateTime.today().weekday() + 5)).strftime('%Y-%m-%d')" />
            <field name="finish_date" eval="(DateTime.today() + relativedelta(months=3) - timedelta(days=DateTime.today().weekday() + 5)).strftime('%Y-%m-%d')" />
            <field name="time_start" eval="10" />
            <field name="time_stop" eval="12" />
        </record>

    </data>
</openerp>